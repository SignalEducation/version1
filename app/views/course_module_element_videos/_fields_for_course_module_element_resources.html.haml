%h3.l-margin-top-big
  =t('views.course_module_element_resources.index.h1')


=f.fields_for :course_module_element_resources do |cme_resource|
  .box-item
    .row
      .col-sm-12

        -if cme_resource.object.upload_file_name
          %h4
            Edit Upload
        -else
          %h4
            New Upload

        .col-md-6
          =cme_resource.label :name, t('views.course_module_element_resources.form.name'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =cme_resource.text_field :name, placeholder: t('views.course_module_element_resources.form.name_placeholder'), class: 'form-control'

        .col-md-6
          =cme_resource.label :upload, t('views.course_module_element_resources.form.upload'), class: 'control-label'

          -if cme_resource.object.upload_file_name
            .form-control-static
              =link_to cme_resource.object.upload_file_name, cme_resource.object.upload.url, target: '_blank'
              =number_to_human_size(cme_resource.object.upload_file_size)
              %br/
              %br/

            Upload a replacement file or delete the file
            -#=t('views.course_module_element_resources.form.replace')
            .input-group.input-group-lg.form-control

              =cme_resource.file_field :upload

            %p{style: 'margin: 10px 0;'}
              OR
            .checkbox
              %label
                =cme_resource.check_box :_destroy
                =t('views.course_module_elements.form.delete')
          -else
            .input-group.input-group-lg
              =cme_resource.file_field :upload, class: 'form-control'

