.hero-cfa.home_page_layout
  %header
    .l-wrap-home
      =render partial: 'layouts/transparent_navbar'

      .cfa#sign-up
        .row
          .col-sm-6.col-md-8.col-lg-8
            %p.h3.h-white.h-separator.h-separator-left
              LearnSignal & WallStreetOasis
            %h1.h1.h-white.l-margin-top-big
              Take the quick prep course for the CFA level 1

          .col-sm-6.col-md-4.col-lg-4#sign-up-form
            .text-left=render partial: 'layouts/error_messages', locals: {thing: @user, message: t('views.home_pages.sign_up_form.error_panel_caption')}
            =form_for @user, url: student_sign_up_url do |f|
              =f.hidden_field :locale, value: (params[:locale] || 'en')
              =f.hidden_field :topic_interest, value: @url_value
              .col-sm-12
                %p.h5.h-white.l-margin-bottom
                  ='7-day free trial (up to 200 minutes)'

              .col-sm-6
                .form-group
                  =f.text_field :first_name, placeholder: t('views.users.form.first_name'), autofocus: true, required: true, class: 'form-control', id: 'first_name'
              .col-sm-6
                .form-group
                  =f.text_field :last_name, placeholder: t('views.users.form.last_name'), class: 'form-control', id: 'last_name'
              .col-sm-12
                .form-group
                  =f.email_field :email, placeholder: t('views.users.form.email'), class: 'form-control', required: true, id: 'email'
              .col-sm-12
                .form-group
                  =f.password_field :password, placeholder: t('views.users.form.password'), class: 'form-control', required: true, id: 'password'
              .col-sm-6.col-xs-6
                =f.submit t('views.home_pages.sign_up_form.submit'), class: 'btn btn-red signUp'
                .sk-circle
                  .sk-circle1.sk-child
                  .sk-circle2.sk-child
                  .sk-circle3.sk-child
                  .sk-circle4.sk-child
                  .sk-circle5.sk-child
                  .sk-circle6.sk-child
                  .sk-circle7.sk-child
                  .sk-circle8.sk-child
                  .sk-circle9.sk-child
                  .sk-circle10.sk-child
                  .sk-circle11.sk-child
                  .sk-circle12.sk-child

              .col-sm-6.col-xs-6
                %span.no-card
                  =t('views.home_pages.sign_up_form.no_credit_card_needed')



.cfa-business
  .l-wrap
    .l-section
      .container-fluid
        .row
          .col-sm-12
            %h2.h2.upcase.h-center.h-separator.h-separator-center.l-margin-bottom-big
              Features to support your CFA study
        .row
          .col-sm-4
            %h3.l-margin-bottom-big
              =image_tag('phone-icon.png', class: 'features-img', alt: 'acca-anytime-anywhere-mobile-icon')
              Anywhere, Anytime
            %p.p
              Study for your specific topics anytime, anywhere, on any device.
          .col-sm-4
            %h3.l-margin-bottom-big
              =image_tag('acca-coins.png', class: 'features-img', alt: 'acca-depth-of-content-icon')
              Small Monthly Subscription
            %p.p
              Our subscription model offers you more flexibility than fixed price providers.
          .col-sm-4
            %h3.l-margin-bottom-big
              =image_tag('network-icon.png', class: 'features-img', alt: 'acca-expert-author-network-icon')
              Expert Author Network
            %p.p
              Learn from the best with training designed and developed by industry experts.

.l-section.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row
        .col-sm-12
          %h3.h2.text-center.h-separator.h-separator-center.l-margin-bottom-big
            Access all CFA Courses
      .course-list-wrap
        .row
          .col-sm-12.col-md-12
            -@group.try(:active_children).all_in_order.each do |course|
              .col-sm-6
                =link_to library_special_link(course), class: 'course-panel course-panel-inner group-inner' do
                  %h3.h2.course-panel-title.text-center
                    =course.name
                  %p.p.course-panel-desc
                    =course.short_description.truncate(150)

.start-trial
  %a.btn-block.btn-block-red{href: '#sign-up'}
    .l-wrap
      .l-section-small
        .container-fluid
          .col-sm-12
            %p.h5.text-center
              Become a member
            %p.h2.text-center
              Start your 14-day free trial &rarr;


:javascript



  $(document).ready(function(){

    $(".sk-circle").hide();

    $(".signUp").click(function(event) {
      if($('#first_name').val() && $('#last_name').val() && $('#email').val() && $('#password').val() ) {
        $(".signUp").hide();
        $(".sk-circle").show();
      }
    });


    $('a[href^="#"]').on('click',function (e) {
      e.preventDefault();

      var target = this.hash,
      $target = $(target);

      $('html, body').stop().animate({
        'scrollTop': $target.offset().top
      }, 500, 'swing', function () {
        window.location.hash = target;
      });
    });
  });



