.l-section-small.is-bg-asphalt
  .l-wrap-large
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.countries.index.h1')

      .row.l-margin-top.l-margin-bottom
        .col-md-12
          =render partial: 'management_consoles/system_requirements_nav'

      .row
        .col-sm-12
          .box-item.table-box
            .row.l-margin-bottom
              =link_to 'New Country', new_country_url, class: 'btn btn-primary btn-small'

            .table-responsive
              %table.table.sorted_table{data: {destination: countries_url}}
                %thead
                  %tr
                    %th=t('views.countries.form.name')
                    %th=t('views.countries.form.iso_code')
                    %th=t('views.countries.form.currency_id')
                    %th
                    %th
                %tbody
                  -@countries.each do |country|
                    %tr{id: country.id}
                      %td=country.name
                      %td=country.iso_code
                      %td=country.currency.name
                      %td
                        =link_to t('views.general.show'), country_url(country), class: 'btn btn-secondary btn-small'
                        =link_to t('views.general.edit'), edit_country_url(country), class: 'btn btn-primary btn-small'
                        -if country.destroyable?
                          =link_to t('views.general.delete'), country, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-secondary-reverse btn-small'
                      %td
                        %span.glyphicon.glyphicon-sort{title: t('views.general.drag_to_reorder')}

              =will_paginate @countries, renderer: BootstrapPagination::Rails

