=f.fields_for :content_page_sections do |section|
  .box-item.form-box
    =section.hidden_field :subject_course_id
    =section.hidden_field :sorting_order
    .col-sm-12
      .form-group
        =section.label :text_content, 'Text'
        .input-group.input-group-lg
          =section.text_area :text_content, placeholder: t('views.blog_posts.form.title_placeholder'), class: 'form-control section_editor', as: :summernote
      .form-group
        =section.label :panel_colour, 'Panel Colour'
        .input-group.input-group-lg
          =section.color_field :panel_colour, placeholder: t('views.external_banners.form.background_colour_placeholder'), class: 'form-control'

      -if section.object.destroyable?
        .form-group.pt-4
          .checkbox
            %label
              =section.check_box :_destroy
              Remove Section


:javascript
  $('.section_editor').summernote({
    disableDragAndDrop: true,
    height: 150
  });
