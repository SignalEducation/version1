-if @content_page.transparent_nav?
  =render partial: 'layouts/external_banner'
  .hero-library
    .l-wrap-small
      =render partial: 'layouts/transparent_navbar'
      .l-section-footer-pages
        .container-fluid
          .row
            .col-md-6.col-md-offset-3
              %h1.h1.h-white.h-separator.h-separator-center.text-center.l-margin-bottom
                =@content_page.h1_text
              %p.h5.h-white.text-center.l-margin-bottom-big
                =@content_page.h1_subtext


-if flash[:success] || flash[:error] || flash[:warning]
  =render partial: 'layouts/flash_messages'

.l-section-small.is-bg-asphalt
  .l-wrap-small
    .container-fluid
      .row
        -@content_page.content_page_sections.each do |section|
          .col-md-12
            .card.card-course
              .card-info-lg
                =section.text_content.html_safe

              .card-label{style: "background: #{section.panel_colour};"}
                .row
                  .col-md-12.col-xs-12.text-center
                    %h4{style: 'color: #fff;'}

