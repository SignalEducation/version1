=form_for(@exam_body, html: {class: 'form-horizontal', role: 'form'}) do |f|
  .box-item.form-box
    =render partial: '/layouts/error_messages', locals: {thing: @exam_body, message: nil}
    .row
      .col-md-12
        .col-md-6
          =f.label :name, t('views.exam_bodies.form.name'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.text_field :name, placeholder: t('views.exam_bodies.form.name_placeholder'), class: 'form-control', style: 'border-radius: 6px;', autofocus: true
          %br/
        .col-md-6
          =f.label :url, t('views.exam_bodies.form.url'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.text_field :url, placeholder: t('views.exam_bodies.form.url_placeholder'), class: 'form-control', style: 'border-radius: 6px;'
          %br/
        .col-md-6
          =f.label :modal_heading, t('views.exam_bodies.form.modal_heading'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.text_field :modal_heading, placeholder: t('views.exam_bodies.form.modal_heading_placeholder'), class: 'form-control', style: 'border-radius: 6px;'
          %br/
        .col-md-6
          =f.label :modal_text, t('views.exam_bodies.form.modal_text'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.text_area :modal_text, placeholder: t('views.exam_bodies.form.modal_text_placeholder'), class: 'form-control', style: 'border-radius: 6px;'

  .row.l-margin-top-big
    .col-sm-12
      =f.submit t('views.general.save'), class: 'btn btn-primary'
      =link_to t('views.general.cancel'), exam_bodies_path, class: 'btn btn-secondary'
