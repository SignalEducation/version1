.container
  %header.management-console-section
    %h1
      =@invoice.user.full_name
    %p.p-hero.px-lg-8
      ='Invoice ID: '
      =@invoice.id

  %section.pb-4
    =render partial: 'users/user_tabs'
    .row.pt-4
      .col-sm-12
        .box-item
          .row
            .col-sm-4
              .h3
                Invoice ID
              .h6
                =@invoice.id

            .col-sm-4
              .h3
                Stripe ID
              .h6
                =@invoice.stripe_guid

            .col-sm-4
              .h3
                Subscription ID
              .h6
                =@invoice.subscription_id

            .col-sm-4
              .h3
                Payment Attempt
              .h6
                =@invoice.payment_attempted

            .col-sm-4
              .h3
                Payment Closed
              .h6
                =@invoice.payment_closed

            .col-sm-4
              .h3
                Paid
            .h6
                =@invoice.paid

            .col-sm-4
              .h3
                Attempt Count
              .h6
                =@invoice.attempt_count

            .col-sm-4
              .h3
                Next Attempt At
              .h6
                =humanize_stripe_date(@invoice.next_payment_attempt_at) if @invoice.next_payment_attempt_at

            .col-sm-4
              .h3
                Last Charge ID
              .h6
                =@invoice.charge_guid || '----'


            .col-sm-4
              .h3
                Sub Total
              .h6
                =@invoice.sub_total

            .col-sm-4
              .h3
                Total
              .h6
                =@invoice.total

            .col-sm-4
              .h3
                Amount Due
              .h6
                =@invoice.amount_due

            -if @invoice.invoice_line_items.all_prorated.any?
              .col-sm-4
                .h3
                  Proration
                .h6
                  True

              .col-sm-4
                .h3
                  Proration Adjustment
                .h6
                  =@invoice.invoice_line_items.all_prorated.first.amount



    - if @invoice.charges.present?
      .row.l-margin-top.l-margin-bottom
        .col-md-12
          .box-item.table-box#invoices-panel.l-margin-bottom-huge
            .col-sm-12
              %h2.l-margin-bottom
                Charges
              .table-responsive
                %table.table{style: 'font-size: 18px;'}
                  %thead
                    %tr
                      %th
                        Charge ID
                      %th
                        Stripe ID
                      %th
                        Refunded
                      %th
                        Status
                      %th
                        Paid
                      %th

                  %tbody
                    -@invoice.charges.each do |charge|
                      %tr
                        %td
                          =charge.id
                        %td
                          =charge.stripe_guid
                        %td
                          =tick_or_cross(charge.amount_refunded >= 1)
                        %td
                          =charge.status
                        %td
                          =tick_or_cross(charge.paid)
                        %td
                          =link_to 'View', subscription_management_invoice_charge_url(@invoice.subscription.id, @invoice.id, charge.id), class: 'btn btn-primary btn-xs'


