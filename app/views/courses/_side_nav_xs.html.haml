.row
  .col-xs-12.visible-xs-block
    .panel.panel-default.side-nav.border-same-backcolor.round-border.width-smaller
      .panel-body.text-center{"data-target" => "#mySidebar", "data-toggle" => "collapse", "type" => "button"}
        %h4.text-bold
          =@course_module.name

        %ul.list-group.scrollbar.collapse#mySidebar
          -@course_module.course_module_elements.all_active.all_in_order.each do |course_module_element|
            -if course_module_element.id == @course_module_element.try(:id)
              .list-group-item.current-cme
                %p
                  =course_module_element.name.html_safe
                %h5.text-active.text-bold
                  %i.glyphicon.glyphicon-circle-arrow-right{style: 'font-size: large'}
                  Active
            -else
              =link_to course_special_link(course_module_element), title: t('views.courses.show.h1'), class: 'list-group-item' do
                -if course_module_element.completed_by_user(current_user.try(:id))
                  %p
                    =course_module_element.name.html_safe
                  %h5.text-passed.text-bold
                    %i.glyphicon.glyphicon-ok-circle{style: 'font-size: large'}
                    Completed
                -else
                  %p
                    =course_module_element.name.html_safe
                  %h5.text-failed.text-bold
                    %i.glyphicon.glyphicon-play-circle{style: 'font-size: large'}
                    Start
