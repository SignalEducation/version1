=render partial: 'shared/breadcrumbs'

.row
  .col-sm-12
    .page-header
      %h1=@course_module.name

.row
  .col-sm-3
    =render partial: 'courses/side_nav'
  -if @course_module_element
    .col-sm-9
      -if @course_module_element.is_video
        =render partial: 'courses/show_video', locals: {cme: @course_module_element}
      -elsif @course_module_element.is_quiz
        =render partial: 'courses/show_quiz', locals: {cme: @course_module_element}
      -else
        %p course module element - type unknown

  -elsif @course_module

    .row
      .col-sm-12
        .page-header
          %h1=@course_module.name
    .row
      .well
        %h3 Coming soon
        %p We don't have any content for this course module rightnow.
