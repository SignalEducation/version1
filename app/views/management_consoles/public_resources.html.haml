.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.faq_sections.index.h1')

      .row.l-margin-top.l-margin-bottom
        .col-md-12
          =render partial: 'management_consoles/public_resources_nav'
      .row
        .col-md-12
          =link_to 'New FAQ Section', new_faq_section_url, class: 'btn btn-red', title: t('views.general.new_tooltip')
          =link_to 'Reorder FAQ Sections', faq_sections_url, class: 'btn btn-purple', title: t('views.general.new_tooltip')

      .row.l-margin-top.l-margin-bottom
        .col-md-12.l-margin-top
          .ol.sortable-area
            -@faq_sections.all_in_order.each do |faq_section|
              .li.l-margin-bottom-big
                .table-box
                  .table-responsive
                    .col-md-9.l-margin-bottom
                      %h2=faq_section.name
                    .col-md-3
                      .pull-right
                        =tick_or_cross(faq_section.active)

                    %table.table.sorted_table
                      %thead
                        %tr
                          %th=t('views.faq_sections.form.name')
                          %th=t('views.faq_sections.form.active')
                          %th
                          %th
                      %tbody
                        -#faq_section.children.all_in_order.each do |faq|
                          %tr
                            %td=faq.name
                            %td=tick_or_cross(faq.active)
                            %td
                              =link_to t('views.general.edit'), edit_faq_url(faq), class: 'btn btn-cyan btn-small'
                              -if faq.destroyable?
                                =link_to t('views.general.delete'), faq, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-red btn-small'

                    .col-md-6
                      =link_to t('views.course_module_elements.form.new_video'), '#', class: 'btn btn-purple'
                      =link_to t('views.course_module_elements.form.new_quiz'), '#', class: 'btn btn-purple'
                    .col-md-6
                      .pull-right
                        =link_to t('views.faq_sections.edit.h1'), edit_faq_section_url(faq_section), class: 'btn btn-purple'
                        =link_to I18n.t('views.faq_sections.index.delete'), faq_section, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-red'

