.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.orders.show.h1')
            \#
            =@order.id
      .row.l-margin-top.l-margin-bottom
        .col-md-12.l-margin-top-big
          .table-box
            .table-responsive
              %table.table.table-bordered.l-margin-top
                %tr
                  %td.col-sm-4=t('views.orders.show.product_id')
                  %td.col-sm-8
                    =@order.product.name
                    -if !@order.product.correction_pack? && @order.exercises.map(&:state).all?("pending")
                      %br
                      =link_to "Change product",admin_order_update_product_path(@order)
                %tr
                  %td.col-sm-4=t('views.orders.show.course_id')
                  -if @order.course
                    %td.col-sm-8=@order.course.name
                %tr
                  %td.col-sm-4=t('views.orders.show.user_id')
                  %td.col-sm-8=@order.user.full_name
                %tr
                  %td.col-sm-4=t('views.orders.show.stripe_guid')
                  %td.col-sm-8=@order.stripe_guid
                %tr
                  %td.col-sm-4=t('views.orders.show.stripe_customer_id')
                  %td.col-sm-8=@order.stripe_customer_id
                %tr
                  %td.col-sm-4=t('views.orders.show.stripe_status')
                  %td.col-sm-8=@order.state
              %p
                =link_to t('views.general.back'), admin_orders_url
