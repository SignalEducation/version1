.container
  %header.management-console-section
    %h1
      ="Update order product"

  %section.pb-3
    =form_for(@order, url: admin_order_path(@order), html: {class: 'form-horizontal', role: 'form'}) do |f|
      .box-item.form-box
        =render partial: '/layouts/error_messages', locals: { thing: @order, message: nil }
        .row
          .col-sm-12
            .row
              .col-sm-6
                .form-group{class: 'mock_exam_form_group'}
                  =label_tag 'From:'
                  .input-group.input-group-lg
                    =@order.product.name

            .row
              .col-sm-6
                .form-group{class: 'mock_exam_form_group'}
                  =f.label :mock_exam_id, 'To:'
                  .input-group.input-group-lg
                    =f.collection_select :product_id, @products, :id, :name, {include_blank: t('views.general.select')}, { class: 'form-control custom-select' }
        .row
          .col-sm-12
            =f.submit t('views.general.save'), class: 'btn btn-primary'
            =link_to t('views.general.cancel'), admin_orders_path, class: 'btn btn-secondary'
