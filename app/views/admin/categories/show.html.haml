.container
  %header.management-console-section
    %h1
      =@category.name

  %section.pb-3
    .row
      .col-sm-12
        =link_to 'Categories', admin_categories_url, class: 'btn btn-primary btn-sm btn-sm-arrow-left'

  .box-item.table-box
    .row
      .col-sm-3
        URL:
        =@category.name_url

      .col-sm-3
        Active:
        =tick_or_cross(@category.active)
    .row
      .col-sm-6
        =@category.description

    .row
      .col-md-12
        .box-item.table-box
          .table-responsive
            %table.table
              %thead
                %tr
                  %th=t('views.groups.form.name')
                  %th=t('views.sub_categories.form.name_url')
                  %th=t('views.sub_categories.form.active')
                  %th
              %tbody
                -@category.sub_categories.each do |sub_category|
                  %tr
                    %td=sub_category.name
                    %td=sub_category.name_url
                    %td=tick_or_cross(sub_category.active)
                    %td=link_to t('views.general.view'), admin_sub_category_url(sub_category), class: 'btn btn-xs btn-primary'

    .row
      .col-md-12
        .box-item.table-box
          .table-responsive
            %table.table
              %thead
                %tr
                  %th=t('views.groups.form.name')
                  %th=t('views.groups.form.name_url')
                  %th=t('views.groups.form.active')
                  %th
              %tbody
                -@category.groups.each do |group|
                  %tr
                    %td=group.name
                    %td=group.name_url
                    %td=tick_or_cross(group.active)
                    %td=link_to t('views.general.view'), admin_group_url(group), class: 'btn btn-xs btn-primary'
