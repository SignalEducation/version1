.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-sm-12.text-center
          %h1
            -if @course_step.is_video
              =t('views.course_steps.show.video_preview')
            -elsif @course_step.is_quiz
              =t('views.course_steps.show.quiz_preview')
            -else
              =t('views.course_steps.show.h1')

      .row.l-margin-bottom-big
        .col-sm-10.col-sm-offset-1.margin-top
          -if @course_step.is_video
            =render partial: 'courses/show_video', locals: {cme: @course_step}
          -elsif @course_step.is_quiz
            =render partial: 'courses/show_quiz', locals: {cme: @course_step}
          -else
            .well.well-sm
              %h2 Sorry, this Course Module Element is of an unknown type

      .row.l-margin-bottom-huge
        .col-sm-8.col-sm-offset-2
          =link_to sanitize('&larr; ' + t('views.course_lessons.index.h1')), course_lesson_special_link(@course_step.course_lesson)
