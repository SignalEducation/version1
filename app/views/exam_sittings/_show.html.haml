.col-md-12
  .corporate-box-item.table-box
    %h3{style: 'color: #3e3f5b;'}
      Exam Sittings

    %table.table{style: 'font-size: 18px;'}
      %thead
        %tr
          %th
            =t('views.subject_course_user_log.show.course')
          %th
            =t('views.exam_sittings.form.date')
          %th

      %tbody
        -@user_exam_sittings.each do |user_exam_sitting|
          %tr
            %td
              =user_exam_sitting.subject_course.name.to_s.truncate(20)
            %td
              =user_exam_sitting.date

.col-md-12
  .corporate-box-item.table-box
    %h3{style: 'color: #3e3f5b;'}
      Add Exam Sittings

    .form-group{style: 'margin-left: 0px;'}
      %table.col-sm-12
        %thead
          %tr
            %th{style: "width: 40%; font-size: 1.4rem;"}='Course'
        %tbody

          -@sitting_courses.all_in_order.each do |course|
            %tr
              %td=course.name
              -course.exam_sittings.each do |sitting|
                %td= check_box_tag "user_exam_sitting[exam_sitting_id]",
                sitting.id

