.modal.fade{id: 'contact-us-modal', tabindex: '-1', role: 'dialog', 'aria-labelledby': 'contactModal', 'aria-hidden': 'true'}
  .modal-dialog{role: 'document'}
    .modal-content
      %button.btn.btn-text.modal-close.p-0{"data-dismiss" => "modal"}
        %span.sr-only Close Modal
        %i.material-icons{"aria-hidden" => "true"} close

      .modal-header
        %h3.mb-3{id: 'contactModal'}
          Contact Us


      .modal-body
        =form_tag(contact_us_intercom_url, {class: 'form py-2', role: 'form', name: 'contact_user_intercom_form'}) do
          =hidden_field_tag :type, value: @form_type
          .row
            .col-sm-6
              .form-group
                =label_tag :full_name, 'Name'
                =text_field_tag :full_name, nil, class: 'form-control', placeholder: 'Enter your full name'

            .col-sm-6
              .form-group
                =label_tag :email, 'Email'
                =email_field_tag :email_address, nil, class: 'form-control', placeholder: 'Enter your email'

            .col-sm-12
              .form-group
                =label_tag :question, 'Question'
                =text_area_tag :question, nil, class: 'form-control', placeholder: 'Please outline your question'

          .pt-2
            =submit_tag 'Submit', class: 'btn btn-primary btn-sm'
