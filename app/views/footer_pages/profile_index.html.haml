.l-section-small.is-bg-asphalt.is-bg-white-to-asphalt
  .l-wrap
    .container-fluid
      .row
        .col-md-6.col-md-offset-3
          %h1.h1.h-separator.h-separator-center.text-center
            Our Lecturers
.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      -@tutors.each do |tutor|
        -if tutor.subject_courses.all_active.any?
          .col-sm-6.col-md-3.col-lg-3
            =link_to profile_url(tutor), class: 'tutor-box' do
              .tutor-box-inner
                = image_tag tutor.profile_image.url, class: 'profile-pic profile-pic-big'
                %h3.h4.tutor-box-title
                  =tutor.full_name

