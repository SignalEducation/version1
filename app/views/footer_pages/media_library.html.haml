=render partial: 'layouts/external_banner'
.hero-library
  .l-wrap-small
    =render partial: 'layouts/transparent_navbar'
    .l-section-footer-pages
      .container-fluid
        .row
          .col-md-6.col-md-offset-3
            %h1.h1.h-white.h-separator.h-separator-center.text-center
              Media Library
-if flash[:success] || flash[:error] || flash[:warning]
  =render partial: 'layouts/flash_messages'

-if @products.any?

  .l-section-small.is-bg-asphalt
    .l-wrap
      .container-fluid
        .row.l-margin-bottom
          .col-md-12.text-center
            %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
              =t('views.mock_exams.index.h1')
  .l-section-small.is-bg-asphalt
    .l-wrap
      .container-fluid
        .col-md-12
          -@products.each do |product|
            .col-sm-6.col-md-3.col-lg-3
              .box
                -if current_user
                  =link_to new_order_url(product), class: 'box box-profile' do
                    .box-inner
                      =image_tag product.mock_exam.try(:cover_image).try(:url), class: 'media-pic'
                      %p
                        ='Purchase'
                        =product.mock_exam.try(:name)
                -else
                  =link_to sign_in_url(flash: :true), class: 'box box-profile' do
                    .box-inner
                      =image_tag product.mock_exam.try(:cover_image).try(:url), class: 'media-pic'
                      %p
                        ='Purchase'
                        =product.mock_exam.try(:name)

.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.white_papers.index.h1')
.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .col-md-12
        -@white_papers.each do |paper|
          .col-sm-6.col-md-3.col-lg-3
            .box
              =link_to public_white_paper_url(paper.try(:name_url)), class: 'box box-profile' do
                .box-inner
                  =image_tag paper.try(:cover_image).try(:url), class: 'media-pic'
                  %p
                    =paper.try(:name)
