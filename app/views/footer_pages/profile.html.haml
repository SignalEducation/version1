-if flash[:success] || flash[:error] || flash[:warning]
  =render partial: 'layouts/flash_messages'
.l-section-small.is-bg-asphalt{style: 'padding-bottom: 0px;'}
  .l-wrap
    .container-fluid
      .profile-single
        .row
          .pull-left
            = image_tag @tutor.profile_image.url, class: 'profile-pic profile-pic-big'
          .pull-left{style: 'margin-left: 40px;'}
            %h1.h1.h-separator.h-separator-left.text-left.l-margin-bottom-big
              =@tutor.full_name
        .row.l-margin-top
          .col-sm-10.col-md-offset-1
            .profile-text
              -if @tutor.description
                %p
                  =@tutor.description.html_safe

.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row
        .col-md-12.text-center
          -if @courses.present?
            %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
              ="Courses by #{@tutor.first_name}"
            .course-list-wrap
              .row
                -@courses.each do |course|
                  -if course.parent && course.parent.active && course.active_children
                    .col-sm-4
                      =link_to library_special_link(course), class: 'card card-course' do
                        .card-inner.text-center
                          %h3.h3.card-title
                            =course.try(:name)
                        .card-info.text-center
                          %p.h5{style: 'color: #f092b0; '}
                            =course.try(:additional_text_label)

                        .card-label{style: "background: #{course.highlight_colour};"}
                          .row
                            .col-md-12.col-xs-12.text-center
                              %h4{style: 'color: #fff;'}
                                =course.category_label ? course.category_label : 'Enrol Now'
