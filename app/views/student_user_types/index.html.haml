.margin-top
  -if flash[:success] || flash[:error] || flash[:warning]
    =render partial: 'layouts/flash_messages'
.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.student_user_types.index.h1')
      .row.l-margin-top.l-margin-bottom
        .col-md-12.l-margin-top-big
          .no-image-box-item.table-box
            .table-responsive
              =will_paginate @student_user_types, renderer: BootstrapPagination::Rails
              %table.table.table-striped.table-bordered
                %thead
                  %tr
                    %th=t('views.student_user_types.form.name')
                    %th=t('views.student_user_types.form.description')
                    %th=t('views.student_user_types.form.free_trial')
                    %th=t('views.student_user_types.form.subscription')
                    %th=t('views.student_user_types.form.product_order')
                    %th
                %tbody
                  -@student_user_types.each do |student_user_type|
                    %tr{id: student_user_type.id}
                      %td=student_user_type.name
                      %td=student_user_type.description
                      %td=tick_or_cross(student_user_type.free_trial)
                      %td=tick_or_cross(student_user_type.subscription)
                      %td=tick_or_cross(student_user_type.product_order)
                      %td
                        =link_to t('views.general.view'), student_user_type, class: 'btn btn-purple btn-small'
                        =link_to t('views.general.edit'), edit_student_user_type_url(student_user_type), class: 'btn btn-cyan btn-small'
                        -if student_user_type.destroyable?
                          =link_to t('views.general.delete'), student_user_type, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-red btn-small'

      .row
        .col-sm-12
          =link_to t('views.general.new'), new_student_user_type_url, class: 'btn btn-red', title: t('views.general.new_tooltip')
