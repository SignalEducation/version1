#wrapper
  .hidden-xs
    =render partial: 'layouts/management_side_navbar'
  .main-content

    .l-section-small.is-bg-asphalt
      .l-wrap
        .container-fluid
          .row.l-margin-bottom
            .col-md-12.text-center
              %h1.l-margin-bottom.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
                =t('views.mock_exams.index.h1')

          .row.l-margin-top.l-margin-bottom
            .col-md-12
              =render partial: 'layouts/courses_navbar'

          .row.l-margin-top.l-margin-bottom
            .col-sm-12
              =link_to 'New Mock Exam', new_mock_exam_url, class: 'btn btn-red', title: t('views.general.new_tooltip')

          .row.l-margin-top.l-margin-bottom
            .col-md-12.l-margin-top
              .table-box
                .table-responsive
                  %table.table.sorted_table{data: {destination: mock_exams_url}, style: 'font-size: 18px;'}
                    %thead
                      %tr
                        %th=t('views.mock_exams.form.name')
                        %th
                        %th
                        %th
                    %tbody
                      -@mock_exams.each do |mock_exam|
                        %tr{id: mock_exam.id}
                          %td=mock_exam.name
                          %td=mock_exam.sorting_order
                          %td
                            =link_to t('views.general.edit'), edit_mock_exam_url(mock_exam), class: 'btn btn-cyan btn-small'
                            -if mock_exam.destroyable?
                              =link_to t('views.general.delete'), mock_exam, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-red btn-small'
                          %td
                            %span.glyphicon.glyphicon-sort{title: t('views.general.drag_to_reorder')}

