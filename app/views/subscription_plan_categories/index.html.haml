.l-section-small.is-bg-asphalt
  .l-wrap-large
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.subscription_plan_categories.index.h1')
      .row.l-margin-top.l-margin-bottom
        .col-md-12
          =render partial: 'management_consoles/subscriptions_nav'

      .row
        .col-sm-12
          .box-item.table-box
            .row.l-margin-bottom
              =link_to 'New Sub Plan Category', new_subscription_plan_category_url, class: 'btn btn-primary btn-small', title: t('views.general.new_tooltip')

            .table-responsive
              =will_paginate @subscription_plan_categories, renderer: BootstrapPagination::Rails
              %table.table
                %thead
                  %tr
                    %th=t('views.subscription_plan_categories.form.name')
                    %th=t('views.subscription_plan_categories.form.available_from')
                    %th=t('views.subscription_plan_categories.form.available_to')
                    %th=t('views.subscription_plan_categories.form.guid')
                    %th=t('views.subscription_plan_categories.form.trial_period_in_days')
                    %th
                %tbody
                  -@subscription_plan_categories.each do |subscription_plan_category|
                    %tr{id: subscription_plan_category.id, class: subscription_plan_category.status}
                      %td=subscription_plan_category.name
                      %td=subscription_plan_category.available_from.to_s(:standard)
                      %td=subscription_plan_category.available_to.to_s(:standard)
                      %td=subscription_plan_category.guid
                      %td=subscription_plan_category.trial_period_in_days
                      %td
                        =link_to t('views.general.show'), subscription_plan_category_url(subscription_plan_category), class: 'btn btn-secondary btn-small'
                        =link_to t('views.general.edit'), edit_subscription_plan_category_url(subscription_plan_category), class: 'btn btn-primary btn-small'
                        -if subscription_plan_category.destroyable?
                          =link_to t('views.general.delete'), subscription_plan_category, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-secondary-reverse btn-small'

