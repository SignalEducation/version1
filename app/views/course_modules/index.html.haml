.row
  .col-sm-12
    .page-header
      %h1=t('views.course_modules.index.h1')
      %p.lead=t('views.course_modules.index.lead')
.row
  .col-sm-12
    =will_paginate @qualifications, renderer: BootstrapPagination::Rails
    %table.table
      %thead
        %tr
          %th=t('views.qualifications.index.h1')
          %th=t('views.exam_levels.index.h1')
          %th=t('views.exam_sections.index.h1')
          %th
      %tbody
        -qual_tracker = nil
        -@qualifications.each do |qualification|
          -qualification.exam_levels.each do |exam_level|
            %tr
              %td
                -unless qualification.name == qual_tracker
                  -qual_tracker = qualification.name
                  =link_to qualification.name, course_module_special_link(qualification)
              %td
                =link_to exam_level.name, course_module_special_link(exam_level)
              %td
                -exam_level.exam_sections.each do |exam_section|
                  =link_to exam_section.name, course_module_special_link(exam_section)
                  %br/


.row
  .col-sm-12
    =link_to t('views.course_modules.index.new_qualification'), new_qualification_url, class: 'btn btn-success', title: t('views.general.new_tooltip')
    =link_to t('views.course_modules.index.new_exam_level'), new_exam_level_url, class: 'btn btn-success', title: t('views.general.new_tooltip')
    =link_to t('views.course_modules.index.new_exam_section'), new_exam_section_url, class: 'btn btn-success', title: t('views.general.new_tooltip')
