=form_tag course_modules_url, method: :get do
  .form-group
    =select_tag :qualification_url, options_for_select(Qualification.all_in_order.map {|q| [q.name, q.name_url]}, @qualification.name_url), class: 'form-control', onchange: 'this.form.submit(); return false;'


.panel-group#accordion{role: 'tablist', aria: {multiselectable: true }}
  -@qualification.exam_levels.each_with_index do |exam_level, counter|
    .panel.panel-default
      .panel-heading#headingOne{role: 'tab' }
        %h4.panel-title
          %a{data: {toggle: 'collapse', parent: '#accordion'}, href: "#collapse_#{counter}", aria: {expanded: true, controls: "collapse_#{counter}"}}
            =exam_level.name

      .panel-collapse.collapse{id: "collapse_#{counter}", class: (exam_level.id == @exam_level_id ? 'in' : ''), role: 'tabpanel', aria: {labelledby: 'headingOne'}}
        .panel-body
          -if exam_level.exam_sections.count > 0
            -exam_level.exam_sections.all_in_order.each do |exam_section|
              %table.table.sorted_table{data: {destination: course_modules_url}, id: "exam-section-#{exam_section.id}"}
                %thead
                  %tr
                    %td{colspan: 3}
                      =link_to exam_section.name, exam_section, title: t('views.exam_sections.show.h1')
                %tbody
                  -exam_section.course_modules.all_in_order.each do |course_module|
                    %tr{id: course_module.id, data: {parent: "exam-section-#{exam_section.id}"}}
                      %td
                        &rarr;
                      %td
                        =course_module.id
                        =link_to course_module.name, course_module_special_link(course_module)
                      %td
                        %span.glyphicon.glyphicon-sort{title: t('views.general.drag_to_reorder')}
              %p
                =link_to t('views.general.new'), new_course_module_url(exam_section_url: exam_section.name_url), class: 'btn btn-success btn-xs'
          -else
            %table.table.sorted_table{data: {destination: course_modules_url}, id: "exam-level-#{exam_level.id}"}
              %thead
              -exam_level.course_modules.all_in_order.each do |course_module|
                %tbody
                  %tr{id: course_module.id, data: {parent: "exam-level-#{exam_level.id}"}}
                    %td=link_to course_module.name, course_module_special_link(course_module)
                    %td
                      %span.glyphicon.glyphicon-sort{title: t('views.general.drag_to_reorder')}
            =link_to t('views.general.new'), new_course_module_url(exam_level_url: exam_level.name_url), class: 'btn btn-success btn-xs'
-if @course_module.id.to_i > 0
  =link_to t('views.course_modules.show.link_to_student_ui'), course_special_link(@course_module),target: '_blank', class: 'btn btn-info btn-xs'
