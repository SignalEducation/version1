!!! 5
%html{lang: params[:locale] || @delivered_page.language || 'en'}
  %head
    <!-- page ID #{@delivered_page.id} -->
    %meta{charset: 'utf-8'}
    %meta{http: {equiv:'X-UA-Compatible'}, content:'IE=edge'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %title=@delivered_page.seo_title
    %meta{name: 'description', content: @delivered_page.seo_description}
    =stylesheet_link_tag 'application', media: 'all'
    =javascript_include_tag 'application'

    -# JS to enable special navbar behaviour
    %script{src: 'https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js'}
    =javascript_include_tag '/assets/javascripts/cbpAnimatedHeader'
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    =csrf_meta_tags

    -if Rails.env.production?
      =render partial: 'layouts/google_analytics'
    =head_sanitizer(@delivered_page.head_content)
    -if @delivered_page.mark_as_nofollow
      %meta{name: 'robots', content: 'nofollow'}
    -if @delivered_page.mark_as_noindex
      %meta{name: 'robots', content: 'noindex'}

    =render partial: 'layouts/favicon'

  %body.no-top-margin
    =body_sanitizer(@delivered_page.body_content)
    -if @delivered_page.show_standard_footer
      =render partial: 'layouts/footer'
      =render partial: 'layouts/misc_javascript'
    =render partial: 'static_pages/deliver_page/scroller'
