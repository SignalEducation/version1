.row
  .col-sm-12
    .page-header
      %h1=t('views.static_pages.index.h1')
.row
  .col-sm-12
    =will_paginate @static_pages, renderer: BootstrapPagination::Rails
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th=t('views.static_pages.form.name')
          %th=t('views.static_pages.form.publish_from')
          %th=t('views.static_pages.form.publish_to')
          %th=t('views.static_pages.form.allow_multiples')
          %th=t('views.static_pages.form.public_url')
          %th=t('views.static_pages.form.use_standard_page_template')
          %th=t('views.static_pages.form.head_content')
          %th=t('views.static_pages.form.body_content')
          %th=t('views.static_pages.form.created_by')
          %th=t('views.static_pages.form.updated_by')
          %th=t('views.static_pages.form.add_to_navbar')
          %th=t('views.static_pages.form.add_to_footer')
          %th=t('views.static_pages.form.menu_label')
          %th=t('views.static_pages.form.tooltip_text')
          %th=t('views.static_pages.form.language')
          %th=t('views.static_pages.form.mark_as_noindex')
          %th=t('views.static_pages.form.mark_as_nofollow')
          %th=t('views.static_pages.form.seo_title')
          %th=t('views.static_pages.form.seo_description')
          %th=t('views.static_pages.form.approved_country_ids')
          %th=t('views.static_pages.form.default_page_for_this_url')
          %th=t('views.static_pages.form.make_this_page_sticky')
          %th
      %tbody
        -@static_pages.each do |static_page|
          %tr{id: static_page.id}
            %td=link_to(static_page.name, static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.publish_from.to_s(:standard), static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.publish_to.to_s(:standard), static_page, title: t('views.general.view_tooltip'))
            %td=link_to(tick_or_cross(static_page.allow_multiples), static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.public_url, static_page, title: t('views.general.view_tooltip'))
            %td=link_to(tick_or_cross(static_page.use_standard_page_template), static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.head_content, static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.body_content, static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.created_by, static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.updated_by, static_page, title: t('views.general.view_tooltip'))
            %td=link_to(tick_or_cross(static_page.add_to_navbar), static_page, title: t('views.general.view_tooltip'))
            %td=link_to(tick_or_cross(static_page.add_to_footer), static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.menu_label, static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.tooltip_text, static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.language, static_page, title: t('views.general.view_tooltip'))
            %td=link_to(tick_or_cross(static_page.mark_as_noindex), static_page, title: t('views.general.view_tooltip'))
            %td=link_to(tick_or_cross(static_page.mark_as_nofollow), static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.seo_title, static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.seo_description, static_page, title: t('views.general.view_tooltip'))
            %td=link_to(static_page.approved_country_ids, static_page, title: t('views.general.view_tooltip'))
            %td=link_to(tick_or_cross(static_page.default_page_for_this_url), static_page, title: t('views.general.view_tooltip'))
            %td=link_to(tick_or_cross(static_page.make_this_page_sticky), static_page, title: t('views.general.view_tooltip'))
            %td
              -#=link_to t('views.general.view'), static_page
              =link_to t('views.general.edit'), edit_static_page_url(static_page), class: 'btn btn-info btn-xs'
              -if static_page.destroyable?
                =link_to t('views.general.delete'), static_page, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-danger btn-xs'

.row
  .col-sm-12
    =link_to t('views.general.new'), new_static_page_url, class: 'btn btn-success', title: t('views.general.new_tooltip')
