.row.l-margin-top.l-margin-bottom.margin-top
  .col-md-12.l-margin-top
    =form_for(@white_paper, html: {class: 'form-horizontal', role: 'form'}) do |f|
      =render partial: '/layouts/error_messages', locals: {thing: @white_paper, message: nil}
      .row
        .col-md-6
          =f.hidden_field :sorting_order
          =f.label :name, t('views.white_papers.form.name'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.text_field :name, placeholder: t('views.white_papers.form.name_placeholder'), class: 'form-control update-my-url', style: 'border-radius: 6px;', required: true, autofocus: true
          %br/
          =f.label :name_url, t('views.white_papers.form.name_url'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.text_field :name_url, placeholder: t('views.white_papers.form.name_url_placeholder'), class: 'form-control', style: 'border-radius: 6px;', required: true
          %br/
          =f.label :subject_course_id, t('views.white_papers.form.subject_course_id'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.collection_select :subject_course_id, @subject_courses, :id, :name, {include_blank: t('views.general.select')}, {class: 'form-control'}

        .col-md-6
          -if f.object.file_file_name
            =f.label :file, t('views.white_papers.form.file_title'), class: 'control-label'
            .form-control-static
              =link_to f.object.file_file_name, f.object.file.url, target: '_blank'
              =number_to_human_size(f.object.file_file_size)
              %br/
              =f.label :file, t('views.white_papers.form.file_replacement'), class: 'control-label'
          -else
            =f.label :file, t('views.white_papers.form.file'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.file_field :file, class: 'form-control', style: 'border-radius: 6px;'
          %br/
          -if f.object.cover_image_file_name
            =f.label :file, t('views.white_papers.form.cover_image_title'), class: 'control-label'
            .form-control-static
              =link_to f.object.cover_image_file_name, f.object.cover_image.url, target: '_blank'
              =number_to_human_size(f.object.cover_image_file_size)
              %br/
              =f.label :cover_image, t('views.white_papers.form.cover_image_replacement'), class: 'control-label'
          -else
            =f.label :cover_image, t('views.white_papers.form.cover_image'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.file_field :cover_image, class: 'form-control', style: 'border-radius: 6px;'
        .col-md-12

          %br/
          =f.label :description, t('views.white_papers.form.description'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.text_area :description, as: :summernote, placeholder: t('views.white_papers.form.description_placeholder'), rows: 4, class: 'form-control', style: 'border-radius: 6px;', required: true, id: 'editor'



      .row
        %br/
        %br/
        %br/
        =f.submit t('views.general.save'), class: 'btn btn-red'
        =link_to t('views.general.cancel'), white_papers_path, class: 'btn btn-cyan'


:javascript

  $('#editor').summernote({
    height: 150
  });
