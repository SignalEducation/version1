.row
  .col-sm-12
    .page-header
      %h1=t('views.white_papers.index.h1')
.row
  .col-sm-12
    =will_paginate @white_papers, renderer: BootstrapPagination::Rails
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th=t('views.white_papers.form.title')
          %th=t('views.white_papers.form.description')
          %th
          %th
      %tbody
        -@white_papers.each do |white_paper|
          %tr{id: white_paper.id}
            %td=link_to(white_paper.title, white_paper, title: t('views.general.view_tooltip'))
            %td=link_to(white_paper.description, white_paper, title: t('views.general.view_tooltip'))
            %td
              -#=link_to t('views.general.view'), white_paper
              =link_to t('views.general.edit'), edit_white_paper_url(white_paper), class: 'btn btn-info btn-xs'
              -if white_paper.destroyable?
                =link_to t('views.general.delete'), white_paper, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-danger btn-xs'
            %td
              %span.glyphicon.glyphicon-sort{title: t('views.general.drag_to_reorder')}

.row
  .col-sm-12
    =link_to t('views.general.new'), new_white_paper_url, class: 'btn btn-success', title: t('views.general.new_tooltip')
