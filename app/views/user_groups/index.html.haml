.margin-top
  -if flash[:success] || flash[:error] || flash[:warning]
    =render partial: 'layouts/flash_messages'
.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.user_groups.index.h1')
      .row.l-margin-top.l-margin-bottom
        .col-md-12.l-margin-top-big
          .no-image-box-item.table-box
            .table-responsive
              =will_paginate @user_groups, renderer: BootstrapPagination::Rails
              %table.table.table-bordered.l-margin-top
                %tr
                  %th=t('views.user_groups.form.name')
                  %th=t('views.user_groups.form.individual_student')
                  %th=t('views.user_groups.form.product_student')
                  %th=t('views.user_groups.form.tutor')
                  %th=t('views.user_groups.form.content_manager')
                  %th=t('views.user_groups.form.corporate_customer')
                  %th=t('views.user_groups.form.site_admin')
                  %th=t('views.user_groups.form.subscription_required_to_see_content')
                  %th=t('views.user_groups.form.product_required_to_see_content')
                  %th
                -@user_groups.each do |user_group|
                  %tr
                    %td=user_group.name
                    %td=tick_or_cross(user_group.individual_student)
                    %td=tick_or_cross(user_group.product_student)
                    %td=tick_or_cross(user_group.tutor)
                    %td=tick_or_cross(user_group.content_manager)
                    %td=tick_or_cross(user_group.corporate_customer)
                    %td=tick_or_cross(user_group.site_admin)
                    %td=tick_or_cross(user_group.subscription_required_to_see_content)
                    %td=tick_or_cross(user_group.product_required_to_see_content)
                    %td
                      =link_to t('views.general.show'), user_group_url(user_group), class: 'btn btn-cyan btn-small'
                      =link_to t('views.general.edit'), edit_user_group_url(user_group), class: 'btn btn-cyan btn-small'
                      -if user_group.destroyable?
                        =link_to t('views.general.delete'), user_group, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-red btn-small'

    .row
      =link_to t('views.general.new'), new_user_group_url, class: 'btn btn-red', title: t('views.general.new_tooltip')

