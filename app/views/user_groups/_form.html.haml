.row
  .col-sm-8.col-sm-offset-2
    =form_for(@user_group, html: {class: 'form-horizontal', role: 'form'}) do |f|
      .well.well-sm
        =render partial: '/layouts/error_messages', locals: {thing: @user_group, message: nil}
        .form-group
          =f.label :name, t('views.user_groups.form.name'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.text_field :name, placeholder: t('views.user_groups.form.name_placeholder'), class: 'form-control', autofocus: true
        .form-group
          =f.label :description, t('views.user_groups.form.description'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.text_area :description, placeholder: t('views.user_groups.form.description_placeholder'), rows: 4, class: 'form-control'
        .form-group
          .col-sm-8.col-sm-offset-4
            .checkbox
              %label
                =f.check_box :individual_student
                =t('views.user_groups.form.individual_student')
        .form-group
          .col-sm-8.col-sm-offset-4
            .checkbox
              %label
                =f.check_box :tutor
                =t('views.user_groups.form.tutor')
        .form-group
          .col-sm-8.col-sm-offset-4
            .checkbox
              %label
                =f.check_box :content_manager
                =t('views.user_groups.form.content_manager')
        .form-group
          .col-sm-8.col-sm-offset-4
            .checkbox
              %label
                =f.check_box :blogger
                =t('views.user_groups.form.blogger')
        .form-group
          .col-sm-8.col-sm-offset-4
            .checkbox
              %label
                =f.check_box :corporate_customer
                =t('views.user_groups.form.corporate_customer')
        .form-group
          .col-sm-8.col-sm-offset-4
            .checkbox
              %label
                =f.check_box :site_admin
                =t('views.user_groups.form.site_admin')
        .form-group
          .col-sm-8.col-sm-offset-4
            .checkbox
              %label
                =f.check_box :forum_manager
                =t('views.user_groups.form.forum_manager')
        .form-group
          .col-sm-8.col-sm-offset-4
            .checkbox
              %label
                =f.check_box :subscription_required_at_sign_up
                =t('views.user_groups.form.subscription_required_at_sign_up')
        .form-group
          .col-sm-8.col-sm-offset-4
            .checkbox
              %label
                =f.check_box :subscription_required_to_see_content
                =t('views.user_groups.form.subscription_required_to_see_content')
      =f.submit t('views.general.save'), class: 'btn btn-success'
      =t('views.general.or')
      =link_to t('views.general.cancel'), user_groups_path
