=form_for(@user_exam_sitting, html: {class: 'form-horizontal', role: 'form'}) do |f|
  =render partial: '/layouts/error_messages', locals: {thing: @user_exam_sitting, message: nil}
  .row
    .col-md-8.col-md-offset-2
      =f.label :exam_sitting_id, t('views.user_exam_sittings.form.exam_sitting_id'), class: 'control-label'
      .input-group.input-group-lg.full-width
      %br/
      =f.collection_select :exam_sitting_id, @exam_sittings, :id, :name, {include_blank: t('views.general.select')}, {class: 'form-control'}
      %br/
      =f.label :subject_course_id, t('views.user_exam_sittings.form.subject_course_id'), class: 'control-label'
      .input-group.input-group-lg.full-width
        =f.collection_select :subject_course_id, @subject_courses, :id, :name, {include_blank: t('views.general.select')}, {class: 'form-control'}
      %br/
      =f.label :date, t('views.user_exam_sittings.form.date'), class: 'control-label col-sm-4'
      .input-group.input-group-lg.full-width
        =f.text_field :date, placeholder: t('views.user_exam_sittings.form.date_placeholder'), class: 'form-control datepicker', data: {'date-format' => t('controllers.application.datepicker_date_format')}

  .row
    =f.submit t('views.general.save'), class: 'btn btn-red'
    =link_to t('views.general.cancel'), user_exam_sittings_path, class: 'btn btn-cyan'


:javascript

  $(function () {
    $('#datetimepicker').datetimepicker();
      format: 'DD/MM/YYYY'
  });
