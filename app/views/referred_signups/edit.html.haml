.row
  .col-sm-12
    .page-header
      %h1=t('views.referred_signups.edit.h1')
      .row
        .col-sm-8.col-sm-offset-2
          =form_for(@referred_signup, html: {class: 'form-horizontal', role: 'form'}) do |f|
            .well.well-sm
              =render partial: '/layouts/error_messages', locals: { thing: @referred_signup, message: nil }
              .form-group
                =f.label :payed_at, t('views.referred_signups.edit.payed_at'), class: 'control-label col-sm-4'
                .col-sm-8
                  =f.date_select :payed_at, class: 'form-control', autofocus: true
            %p
              =f.submit t('views.general.save'), class: 'btn btn-success'
              =t('views.general.or')
              =link_to t('views.general.cancel'), referred_signups_path
