.row
  .col-sm-6.col-md-8
    .col-sm-12
      .col-md-6
        .h3
          =t('views.user_accounts.trial_info.trial_status')
        .h6
          =@user.user_account_status
      .col-md-6
        .h3
          =t('views.user_accounts.trial_info.remaning_minutes')
        .h6
          =@user.trial_minutes_left

    .col-sm-12.l-margin-top
      .col-md-6
        .h3
          =t('views.user_accounts.trial_info.trial_started')
        .h6
          =humanize_datetime(@user.student_access.trial_started_date)


      .col-md-6
        -if @user.student_access.trial_ended_date
          .h3
            =t('views.user_accounts.trial_info.trial_ended')
          .h6
            =humanize_datetime(@user.student_access.trial_ended_date)

        -elsif @user.student_access.trial_ending_at_date
          .h3
            =t('views.user_accounts.trial_info.trial_ending')
          .h6
            =humanize_datetime(@user.student_access.trial_ending_at_date)



  .col-sm-6.col-md-4
    -if @user.trial_user?
      =link_to t('views.user_accounts.trial_info.upgrade_button'), new_subscription_url, class: 'btn btn-red full-width'

