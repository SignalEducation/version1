=form_for(@faq_section, html: {class: 'form-horizontal', role: 'form'}) do |f|
  .box-item.form-box
    =f.hidden_field :sorting_order
    =render partial: '/layouts/error_messages', locals: {thing: @faq_section, message: nil}
    .row
      .col-sm-6
        .form-group
          =f.label :name, t('views.faq_sections.form.name')
          .input-group.input-group-lg
            =f.text_field :name, placeholder: t('views.faq_sections.form.name_placeholder'), class: 'form-control update-my-url', autofocus: true

        .form-group
          =f.label :name_url, t('views.faq_sections.form.name_url')
          .input-group.input-group-lg
            =f.text_field :name_url, placeholder: t('views.faq_sections.form.name_url_placeholder'), class: 'form-control'

      .col-sm-6
        .form-group.pt-4
          .col-sm-8.col-sm-offset-4
            .checkbox
              %label
                =f.check_box :active
                =t('views.faq_sections.form.active')

        .form-group.pt-3
          =f.label :description, t('views.faq_sections.form.description')
          .input-group.input-group-lg
            =f.text_area :description, placeholder: t('views.faq_sections.form.description_placeholder'), rows: 5, class: 'form-control'


    .row.pt-4
      .col-sm-12
        =f.submit t('views.general.save'), class: 'btn btn-primary'
        =link_to t('views.general.cancel'), faq_sections_path, class: 'btn btn-secondary'



