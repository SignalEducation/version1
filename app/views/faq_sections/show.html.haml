.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.faq_sections.show.h1')
            \#
            =@faq_section.id
      .row.l-margin-top.l-margin-bottom
        .col-md-12.l-margin-top-big
          .table-box
            .table-responsive
              %table.table.table-bordered.l-margin-top
                %tr
                  %td.col-sm-4=t('views.faq_sections.form.name')
                  %td.col-sm-8=@faq_section.name
                %tr
                  %td.col-sm-4=t('views.faq_sections.form.name_url')
                  %td.col-sm-8=@faq_section.name_url
                %tr
                  %td.col-sm-4=t('views.faq_sections.form.description')
                  %td.col-sm-8=@faq_section.description
                %tr
                  %td.col-sm-4=t('views.faq_sections.form.active')
                  %td.col-sm-8=tick_or_cross(@faq_section.active)
                %tr
                  %td.col-sm-4=t('views.faq_sections.form.sorting_order')
                  %td.col-sm-8=@faq_section.sorting_order
              %p
                =link_to t('views.general.back'), faq_sections_url
                |
                =link_to t('views.general.edit'), edit_faq_section_url(id: @faq_section.id), title: t('views.general.edit_tooltip')
