=form_for @course_module_jumbo_quiz, html: {class: 'form-horizontal', role: 'form'} do |jumbo_quiz|
  =jumbo_quiz.hidden_field :course_module_id
  =render partial: '/layouts/error_messages', locals: {thing: @course_module_jumbo_quiz, message: nil}
  .row
    .col-md-6
      =jumbo_quiz.label :course_module_id, t('views.course_module_jumbo_quiz.form.course_module_id'), class: 'control-label'
      .input-group.input-group-lg.full-width
        .form-control-static=jumbo_quiz.object.course_module.name
      %br/
      %br/
      =jumbo_quiz.label :name, t('views.course_module_jumbo_quiz.form.name'), class: 'control-label'
      .input-group.input-group-lg.full-width
        =jumbo_quiz.text_field :name, placeholder: t('views.course_module_jumbo_quiz.form.name_placeholder'), class: 'form-control update-my-url', style: 'border-radius: 6px;'
      %br/
      =jumbo_quiz.label :name_url, t('views.course_module_jumbo_quiz.form.name_url'), class: 'control-label'
      .input-group.input-group-lg.full-width
        =jumbo_quiz.text_field :name_url, placeholder: t('views.course_module_jumbo_quiz.form.name_placeholder'), class: 'form-control', style: 'border-radius: 6px;'
      %br/
      .form-group
        .col-sm-8.col-sm-offset-2
          .checkbox
            %label
              =jumbo_quiz.check_box :active
              =t('views.course_module_jumbo_quiz.form.active')
    .col-md-6
      =jumbo_quiz.label :minimum_question_count_per_quiz, t('views.course_module_jumbo_quiz.form.minimum_question_count_per_quiz'), class: 'control-label'
      .input-group.input-group-lg.full-width
        =jumbo_quiz.select :minimum_question_count_per_quiz, options_for_select([0, 5, 10, 15, 20, 25, 30], 5), {include_blank: t('views.general.select')}, {class: 'form-control', style: 'border-radius: 6px;'}
      %br/
      =jumbo_quiz.label :maximum_question_count_per_quiz, t('views.course_module_jumbo_quiz.form.maximum_question_count_per_quiz'), class: 'control-label'
      .input-group.input-group-lg.full-width
        =jumbo_quiz.select :maximum_question_count_per_quiz, options_for_select([5, 10, 15, 20, 25, 30], 20), {include_blank: t('views.general.select')}, {class: 'form-control', style: 'border-radius: 6px;'}
      %br/
      =jumbo_quiz.label :total_number_of_questions, t('views.course_module_jumbo_quiz.form.total_number_of_questions'), class: 'control-label'
      .input-group.input-group-lg.full-width
        =jumbo_quiz.select :total_number_of_questions, options_for_select([5, 10, 15, 20, 25, 30], 20), {include_blank: t('views.general.select')}, {class: 'form-control', style: 'border-radius: 6px;'}

  .row.l-margin-top-big
    =jumbo_quiz.submit t('views.general.save'), class: 'btn btn-red'
    =link_to t('views.general.cancel'), course_module_special_link(@course_module_jumbo_quiz.course_module), class: 'btn btn-cyan'
