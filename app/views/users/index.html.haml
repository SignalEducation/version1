.row
  .col-sm-12
    .page-header
      %h1=t('views.users.index.h1')
.row
  .col-sm-12
    =will_paginate @users, renderer: BootstrapPagination::Rails
    %table.table.table-striped.table-bordered
      %tr
        %th=t('views.users.form.email')
        %th=t('views.users.form.first_name')
        %th=t('views.users.form.last_name')
        %th=t('views.users.form.crypted_password')
        %th=t('views.users.form.password_salt')
        %th=t('views.users.form.persistence_token')
        %th=t('views.users.form.perishable_token')
        %th=t('views.users.form.single_access_token')
        %th=t('views.users.form.login_count')
        %th=t('views.users.form.failed_login_count')
        %th=t('views.users.form.last_request_at')
        %th=t('views.users.form.current_login_at')
        %th=t('views.users.form.last_login_at')
        %th=t('views.users.form.current_login_ip')
        %th=t('views.users.form.last_login_ip')
        %th=t('views.users.form.active')
        %th=t('views.users.form.user_group_id')
        %th=t('views.users.form.password_reset_requested_at')
        %th=t('views.users.form.password_reset_token')
        %th=t('views.users.form.password_reset_at')
        %th=t('views.users.form.stripe_customer_id')
        %th=t('views.users.form.corporate_customer_id')
        %th=t('views.users.form.corporate_customer_user_group_id')
        %th=t('views.users.form.operational_email_frequency')
        %th=t('views.users.form.study_plan_notifications_email_frequency')
        %th=t('views.users.form.falling_behind_email_alert_frequency')
        %th=t('views.users.form.marketing_email_frequency')
        %th=t('views.users.form.marketing_email_permission_given_at')
        %th=t('views.users.form.blog_notification_email_frequency')
        %th=t('views.users.form.forum_notification_email_frequency')
        %th
      -@users.each do |user|
        %tr
          %td=link_to(user.email, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.first_name, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.last_name, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.crypted_password, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.password_salt, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.persistence_token, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.perishable_token, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.single_access_token, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.login_count, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.failed_login_count, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.last_request_at.to_s(:standard), user, title: t('views.general.view_tooltip'))
          %td=link_to(user.current_login_at.to_s(:standard), user, title: t('views.general.view_tooltip'))
          %td=link_to(user.last_login_at.to_s(:standard), user, title: t('views.general.view_tooltip'))
          %td=link_to(user.current_login_ip, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.last_login_ip, user, title: t('views.general.view_tooltip'))
          %td=link_to(tick_or_cross(user.active), user, title: t('views.general.view_tooltip'))
          %td=link_to(user.user_group.name, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.password_reset_requested_at.to_s(:standard), user, title: t('views.general.view_tooltip'))
          %td=link_to(user.password_reset_token, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.password_reset_at.to_s(:standard), user, title: t('views.general.view_tooltip'))
          %td=link_to(user.stripe_customer.name, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.corporate_customer.name, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.corporate_customer_user_group.name, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.operational_email_frequency, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.study_plan_notifications_email_frequency, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.falling_behind_email_alert_frequency, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.marketing_email_frequency, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.marketing_email_permission_given_at.to_s(:standard), user, title: t('views.general.view_tooltip'))
          %td=link_to(user.blog_notification_email_frequency, user, title: t('views.general.view_tooltip'))
          %td=link_to(user.forum_notification_email_frequency, user, title: t('views.general.view_tooltip'))
          %td
            -#=link_to t('views.general.view'), user
            =link_to t('views.general.edit'), edit_user_url(user), class: 'btn btn-info btn-xs'
            -if user.destroyable?
              =link_to t('views.general.delete'), user, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-danger btn-xs'
.row
  .col-sm-12
    =link_to t('views.general.new'), new_user_url, class: 'btn btn-success', title: t('views.general.new_tooltip')
