.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =@user.full_name
          %p.h5.text-center
            =@user.email
      .row.l-margin-top.l-margin-bottom
        .col-md-12
          =render partial: 'user_tabs'

      .row.l-margin-top.l-margin-bottom
        .col-md-12
          -if @orders.any?
            .corporate-box-item.table-box
              %h3.h-dark
                Mock Exams
              %table.table{style: 'font-size: 18px;'}
                %thead
                  %tr
                    %th
                      =t('views.mock_exams.form.name')
                    %th
                      =t('views.invoices.form.date')
                    %th
                      =t('views.invoices.form.status')
                    %th
                      =t('views.invoices.form.line_total_inc_vat')
                    %th
                %tbody
                  -@orders.each do |order|
                    %tr
                      %td
                        -if order.product && order.product.mock_exam
                          =order.product.mock_exam.name.to_s.truncate(20)
                      %td
                        =humanize_datetime(order.created_at)
                      %td
                        =order.current_status.to_s.capitalize
                      %td
                        =number_in_local_currency(order.product.price, order.product.currency_id)
                      %td
                        =link_to order.product.mock_exam.file.url, target: '_blank' do
                          .btn.btn-purple.btn-small.pull-right
                            View
