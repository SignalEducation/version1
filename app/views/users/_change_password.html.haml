=form_for(@user, url: change_password_url, method: :post, html: {class: 'form-horizontal', role: 'form', id: 'change-password-form'}) do |f|

  .modal.fade#change_password_modal{tabindex:'-1', role:'dialog', 'aria-labelledby':'changePasswordLabel'}
    .modal-dialog
      .modal-content.is-bg-asphalt.l-padding-side-15
        .container-fluid
          .modal-header
            .row
              .col-md-12.l-margin-top
                %button{type: "button", class: 'close', "data-dismiss": 'modal', "aria-label": 'Close', style: 'font-size: 30px'} &times;
                %h2.modal-title{style: 'width: 95%'}
                  =t('views.users.show.change_your_password.h4')
            .row.l-margin-top
              .col-md-12
                .form-group
                  =f.password_field :current_password, placeholder: t('views.users.form.current_password_placeholder'), class: 'form-control'
                .form-group
                  =f.password_field :password, placeholder: t('views.users.form.password_placeholder'), class: 'form-control', id: 'pwd'
                .form-group
                  =f.password_field :password_confirmation, placeholder: t('views.users.form.password_confirmation_placeholder'), class: 'form-control'

              %button.btn.btn-cyan{type: 'button', data: {dismiss: 'modal'}}=t('views.general.close')
              =f.submit t('views.general.save'), class: 'btn btn-red'
