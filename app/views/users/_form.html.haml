          =f.label :study_plan_notifications_email_frequency, t('views.users.form.study_plan_notifications_email_frequency'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.text_field :study_plan_notifications_email_frequency, placeholder: t('views.users.form.study_plan_notifications_email_frequency_placeholder'), class: 'form-control'
        .form-group
          =f.label :falling_behind_email_alert_frequency, t('views.users.form.falling_behind_email_alert_frequency'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.text_field :falling_behind_email_alert_frequency, placeholder: t('views.users.form.falling_behind_email_alert_frequency_placeholder'), class: 'form-control'
        .form-group
          =f.label :marketing_email_frequency, t('views.users.form.marketing_email_frequency'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.text_field :marketing_email_frequency, placeholder: t('views.users.form.marketing_email_frequency_placeholder'), class: 'form-control'
        .form-group
          =f.label :marketing_email_permission_given_at, t('views.users.form.marketing_email_permission_given_at'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.text_field :marketing_email_permission_given_at, placeholder: t('views.users.form.marketing_email_permission_given_at_placeholder'), class: 'form-control'
        .form-group
          =f.label :blog_notification_email_frequency, t('views.users.form.blog_notification_email_frequency'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.text_field :blog_notification_email_frequency, placeholder: t('views.users.form.blog_notification_email_frequency_placeholder'), class: 'form-control'
        .form-group
          =f.label :forum_notification_email_frequency, t('views.users.form.forum_notification_email_frequency'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.text_field :forum_notification_email_frequency, placeholder: t('views.users.form.forum_notification_email_frequency_placeholder'), class: 'form-control'
      =f.submit t('views.general.save'), class: 'btn btn-success'
      =t('views.general.or')
      =link_to t('views.general.cancel'), users_path
