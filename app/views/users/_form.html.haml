        .form-group
          =f.label :password_reset_token, t('views.users.form.password_reset_token'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.text_field :password_reset_token, placeholder: t('views.users.form.password_reset_token_placeholder'), class: 'form-control'
        .form-group
          =f.label :password_reset_at, t('views.users.form.password_reset_at'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.text_field :password_reset_at, placeholder: t('views.users.form.password_reset_at_placeholder'), class: 'form-control'
        .form-group
          =f.label :stripe_customer_id, t('views.users.form.stripe_customer_id'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.collection_select :stripe_customer_id, @stripe_customers, :id, :name, {prompt: t('views.general.select')}, {class: 'form-control'}
        .form-group
          =f.label :corporate_customer_id, t('views.users.form.corporate_customer_id'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.collection_select :corporate_customer_id, @corporate_customers, :id, :name, {prompt: t('views.general.select')}, {class: 'form-control'}
        .form-group
          =f.label :corporate_customer_user_group_id, t('views.users.form.corporate_customer_user_group_id'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.collection_select :corporate_customer_user_group_id, @corporate_customer_user_groups, :id, :name, {prompt: t('views.general.select')}, {class: 'form-control'}
        .form-group
          =f.label :operational_email_frequency, t('views.users.form.operational_email_frequency'), class: 'control-label col-sm-4'
          .col-sm-8
            =f.text_field :operational_email_frequency, placeholder: t('views.users.form.operational_email_frequency_placeholder'), class: 'form-control'
