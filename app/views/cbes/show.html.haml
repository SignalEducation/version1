=stylesheet_link_tag 'splitpanes'
#cbe-front-view{ data: { id: params[:id],
                         user_id: current_user.id,
                         exercise_id: @exercise_id,
                         cbe_name: @cbe.name,
                         introduction_id: @introduction_page_id,
                         product_name: @product&.name,
                         product_id: @product&.id,
                         course_name: @course.name,
                         course_id: @course.id,
                         exam_body_name: @exam_body.name,
                         exam_body_id: @exam_body.id,
                         preferred_exam_body_name: current_user&.preferred_exam_body&.name,
                         preferred_exam_body_id: current_user&.preferred_exam_body_id,
                         onboarding: current_user&.analytics_onboarding_valid?.to_s } }

.row
  .col-xl-12
    %h1.h4
      #fade-overlay.load-overlay-blank
      #small-screen-overlay.load-overlay
        .small-screen-overlay-text
          Please use a larger screen device or landscape mode if on a tablet to access CBE.
          =link_to 'Dashboard', student_dashboard_path, class: 'btn btn-secondary btn-sm btn-sm-arrow-left mb-3 mb-sm-0'
