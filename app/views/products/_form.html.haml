=form_for(@product, html: {class: 'form-horizontal', role: 'form'}) do |f|
  .box-item.form-box
    =render partial: '/layouts/error_messages', locals: {thing: @product, message: nil}
    .row
      .col-md-12
        .col-md-6
          =f.label :name, t('views.products.form.name'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.text_field :name, placeholder: t('views.products.form.name_placeholder'), class: 'form-control', style: 'border-radius: 6px;'
          %br/
        .col-md-6
          =f.label :price, t('views.products.form.price'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.text_field :price, placeholder: t('views.products.form.price_placeholder'), class: 'form-control', style: 'border-radius: 6px;'
          %br/
        .col-md-6
          =f.label :currency_id, t('views.products.form.currency'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.collection_select :currency_id, @currencies, :id, :name, {include_blank: t('views.general.select')}, {class: 'form-control', style: 'border-radius: 6px;'}
          %br/
        .col-md-6
          =f.label :mock_exam_id, t('views.products.form.mock_exam_id'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.collection_select :mock_exam_id, @mock_exams, :id, :name, {include_blank: t('views.general.select')}, {class: 'form-control', style: 'border-radius: 6px;'}
          %br/
        .col-md-6
          =f.label :product_type, t('views.products.form.product_type'), class: 'control-label'
          .input-group.input-group-lg.full-width
            =f.select :product_type, [['Mock Exam', 'mock_exam'], ['Correction Pack', 'correction_pack']], {}, {class: 'form-control', style: 'border-radius: 6px;'}

        .col-md-6
          %br/
          .form-group
            .col-sm-8.col-sm-offset-4
              .checkbox
                %label
                  =f.check_box :active
                  =t('views.currencies.form.active')

  .row
    .col-sm-12
      =f.submit t('views.general.save'), class: 'btn btn-primary'
      =link_to t('views.general.cancel'), products_path, class: 'btn btn-secondary'
