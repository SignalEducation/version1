.breadcrumb
  %small.text-muted
    =t('views.shared.breadcrumbs.you_are_here')
    =link_to t('views.general.home'), library_url

    -if @subject_area
      &gt;
      =link_to @subject_area.name, library_special_link(@subject_area)
      -if @institution
        &gt;
        =link_to @institution.name, library_special_link(@institution)
        -if @qualification
          &gt;
          =link_to @qualification.name, library_special_link(@qualification)
          -if @exam_level
            &gt;
            =link_to @exam_level.name, library_special_link(@exam_level)
            -if @exam_section
              &gt;
              =link_to @exam_section.name, library_special_link(@exam_section)
              -if @course_module
                &gt;
                =link_to @course_module.name, course_special_link(@course_module)
                -if @course_module_element
                  &gt;
                  =link_to @course_module_element.name, course_special_link(@course_module_element)
    -else
      =t('views.general.home')
