.l-section-small.is-bg-asphalt
  .l-wrap-large
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.currencies.index.h1')

      .row.l-margin-top.l-margin-bottom
        .col-md-12
          =render partial: 'management_consoles/system_requirements_nav'

      .row
        .col-sm-12
          .box-item.table-box
            .row.l-margin-bottom
              =link_to 'New Currency', new_currency_url, class: 'btn btn-primary btn-small'

            .table-responsive
              %table.table.sorted_table{data: {destination: currencies_url}}
                %thead
                  %tr
                    %th=t('views.currencies.form.iso_code')
                    %th=t('views.currencies.form.name')
                    %th=t('views.currencies.form.leading_symbol')
                    %th=t('views.currencies.form.trailing_symbol')
                    %th=t('views.currencies.form.active')
                    %th
                    %th
                %tbody
                  -@currencies.each do |currency|
                    %tr{id: currency.id}
                      %td=currency.iso_code
                      %td=currency.name
                      %td=currency.leading_symbol
                      %td=currency.trailing_symbol
                      %td=tick_or_cross(currency)
                      %td
                        =link_to t('views.general.show'), currency_url(currency), class: 'btn btn-secondary btn-small'
                        =link_to t('views.general.edit'), edit_currency_url(currency), class: 'btn btn-primary btn-small'
                        -if currency.destroyable?
                          =link_to t('views.general.delete'), currency, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-secondary-reverse btn-small'
                      %td
                        %span.glyphicon.glyphicon-sort{title: t('views.general.drag_to_reorder')}

              =will_paginate @currencies, renderer: BootstrapPagination::Rails
