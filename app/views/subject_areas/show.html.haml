.row
  .col-sm-12
    .page-header
      %h1
        =t('views.subject_areas.show.h1')
        \#
        =@subject_area.id
.row
  .col-sm-12
    %table.table.table-bordered
      %tr
        %td.col-sm-4=t('views.subject_areas.form.name')
        %td.col-sm-8=@subject_area.name
      %tr
        %td.col-sm-4=t('views.subject_areas.form.name_url')
        %td.col-sm-8=@subject_area.name_url
      %tr
        %td.col-sm-4=t('views.subject_areas.form.active')
        %td.col-sm-8=tick_or_cross(@subject_area.active)
      %tr
        %td.col-sm-4=t('views.institutions.index.h1')
        %td.col-sm-8
          -@subject_area.institutions.each do |institution|
            =link_to institution.name, institution
            %br
          =link_to t('views.general.new'), new_institution_url(subject_area: @subject_area.id), class: 'btn btn-xs btn-success'

    %p
      =link_to t('views.general.back'), subject_areas_url
      |
      =link_to t('views.general.edit'), edit_subject_area_url(id: @subject_area.id), title: t('views.general.edit_tooltip')
