%main
  %article.bg-gray5
    .container
      %header.hero-section.hero-section-external
        %h1.h1-mega
          Choose your preferred exam body
        %h2.h5
          Please choose your current exam body so we can provide a
          subscription tailored for your current study requirements

      %section.pb-md-6.pb-5
        .sign-up-section
          #sign_up.form-box
            =form_for @user, url: preferred_exam_body_path do |f|
              =render partial: 'layouts/error_messages', locals: {thing: @user, message: t('views.home_pages.sign_up_form.error_panel_caption')}
              =f.hidden_field :locale, value: (params[:locale] || 'en')
              .row
                .col-sm-12
                  .form-group
                    =f.label :preferred_exam_body_id, t('views.users.form.exam_body')
                    .input-group.input-group-lg
                      =f.collection_select :preferred_exam_body_id, ExamBody.all, :id, :name, {include_blank: t('views.general.select')}, {class: 'form-control custom-select', required: true, id: 'user_exam_body'}

                  .col-sm-12.l-margin-top
                    =f.submit 'FIND A PLAN', class: 'btn btn-primary', id: 'examBodySubmit'
                    .sk-circle
                      .sk-circle1.sk-child
                      .sk-circle2.sk-child
                      .sk-circle3.sk-child
                      .sk-circle4.sk-child
                      .sk-circle5.sk-child
                      .sk-circle6.sk-child
                      .sk-circle7.sk-child
                      .sk-circle8.sk-child
                      .sk-circle9.sk-child
                      .sk-circle10.sk-child
                      .sk-circle11.sk-child
                      .sk-circle12.sk-child




:javascript

  $(document).on('ready', function() {
    $(".sk-circle").hide();

    $("#examBodySubmit").click(function(event) {
      $("#examBodySubmit").hide();
      $(".sk-circle").show();
    });
  });

