%main
  %article.ls-bg-gray
    .container.w-100
      %header.pt-4.px-2.mb-4
      %section.pb-md-6.pb-5
        .login-section
          #sign-in-ls.form-box.p-4
            =form_for(@user_session, html: {class: ''}) do |f|
              =render partial: '/layouts/error_messages', locals: {thing: @user_session, message: t('views.user_sessions.form.error_message')}
              .row.ls-row 
                .col-sm-12
                  %h1.mb-2.ls-row-title
                    =t('views.user_sessions.new.h1')
                  %p.p-hero.ls-row-subtitle
                    ="Welcome Back. Login to continue your learning."
              .row
                .col-sm-12
                  .form-group
                    =f.label :email, t('views.user_sessions.form.email'), class: 'ls-row-option'
                    =f.email_field :email, placeholder: 'Enter your email', class: 'form-control', autofocus: true, required: true

                .col-sm-12
                  .form-group
                    =f.label :password, t('views.user_sessions.form.password'), class: 'ls-row-option'
                    =f.password_field :password, placeholder: 'Enter your password', class: 'form-control', required: true


              .d-flex.flex-wrap.flex-sm-nowrap.justify-content-between.ls-row
                .ls-row-forgot-password
                  =link_to t('views.user_sessions.form.forgot_password'), forgot_password_url, id: '#forgot-password', style: 'font-size: 14px;color: #02b57b;font-weight: 700;'
                .ls-row-login
                  =f.submit 'Login', class: 'btn btn-primary btn-sm ls-row-login-btn'
          #sign-up-ls.form-box.p-4
            =form_for(@user_session, html: {class: ''}) do |f|
              =render partial: '/layouts/error_messages', locals: {thing: @user_session, message: t('views.user_sessions.form.error_message')}
              .row.ls-row 
                .col-sm-12
                  %h1.mb-2.ls-row-title
                    Sign up
                  %p.p-hero.ls-row-subtitle
                    ="Sign Up to get everything you need to pass your Accounting & Finance exams in one place!"
              .row
                .col-sm-12
                  .form-group
                    =f.label :first_name, 'Name', class: 'ls-row-option'
                    =f.text_field :email, placeholder: 'Enter your full name', class: 'form-control', autofocus: true, required: true

                .col-sm-12
                  .form-group
                    =f.label :email, t('views.user_sessions.form.email'), class: 'ls-row-option'
                    =f.email_field :email, placeholder: 'Enter your email', class: 'form-control', autofocus: true, required: true

                .col-sm-12
                  .form-group
                    =f.label :password, t('views.user_sessions.form.password'), class: 'ls-row-option'
                    =f.password_field :password, placeholder: 'Enter your password', class: 'form-control', required: true


              .d-flex.flex-wrap.flex-sm-nowrap.justify-content-between.ls-row
                .ls-row-forgot-password
                  =link_to t('views.user_sessions.form.forgot_password'), forgot_password_url, id: '#forgot-password', style: 'font-size: 14px;color: #02b57b;font-weight: 700;'
                .ls-row-login
                  =f.submit 'Login', class: 'btn btn-primary btn-sm ls-row-login-btn'
          %p.mt-4.text-center
            ="Don't have a Learnsignal account?"
            %a#sign-up-ls-btn{:style => "font-size: 14px;color: #02b57b;font-weight: 700;cursor: pointer"} Sign Up
            %a#sign-in-ls-btn{:style => "font-size: 14px;color: #02b57b;font-weight: 700;cursor: pointer"} Log In

:javascript
  $(document).on('ready', function() {
    $('#sign-up-ls').hide();
    $('#sign-in-ls-btn').hide();
    $('#sign-in-ls-btn').on('click', function() {
      $('#sign-up-ls').hide();
      $('#sign-in-ls').show();
      $('#sign-in-ls-btn').hide();
      $('#sign-up-ls-btn').show();
    });
    $('#sign-up-ls-btn').on('click', function() {
      $('#sign-in-ls').hide();
      $('#sign-up-ls').show();
      $('#sign-up-ls-btn').hide();
      $('#sign-in-ls-btn').show();
    });
  })