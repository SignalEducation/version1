.margin-top

-if @first_active_log
  -if flash[:success] || flash[:error] || flash[:warning]
    =render partial: 'layouts/flash_messages'

  .l-section-small.is-bg-asphalt
    .l-wrap
      .container-fluid
        %h1.h1.h-separator.h-separator-left.l-margin-bottom
          Dashboard

        .row.tabs
          .col-sm-3
            .account-tabs
              %ul
                %li
                  %a.active{href: '#enrollments', role: 'tab', data: {toggle: 'tab'}}
                    Enrollments
                -if @non_enrollment_logs.any?
                  %li
                    %a{href: '#activity', role: 'tab', data: {toggle: 'tab'}}
                      Activity
          .col-sm-9

            .account-tab-content
              .tab.account-tab#enrollments
                =render partial: 'enrollments'

              -if @non_enrollment_logs.any?
                .tab.account-tab#activity
                  =render partial: 'activity'

-else

  -if flash[:success] || flash[:error] || flash[:warning]
    =render partial: 'layouts/flash_messages'

  .l-section-small.is-bg-asphalt
    .l-wrap
      .container-fluid
        %h1.h1.h-separator.h-separator-left.l-margin-bottom
          Dashboard

      .text-center.l-margin-top-huge.l-margin-bottom-huge
        %h2
          What courses are you interested in ?
      .container-fluid.l-margin-bottom-huge
        .course-list-wrap
          .row
            -@groups.each_with_index do |group|
              -if group.active_children.any?
                .col-sm-6.col-md-4.l-margin-bottom-big.l-margin-top
                  =link_to library_special_link(group), class: 'box box-course' do
                    .image{style: "background: url(#{group.image.url}) repeat-x 50% 0; background-size: contain;"}
                    .box-inner
                      .l-margin-top-xl
                        %h2{style: 'margin-bottom: 5px;'}
                          =group.name
                        %p.p
                          =group.description

                    .box-label
                      %h6.h-white{style: 'margin-top: 0px; margin-bottom: 0px;'}
                        Browse Courses


:javascript

  $(document).ready(function(){

    // Tabs
    $('.tabs').tabs();

  });
