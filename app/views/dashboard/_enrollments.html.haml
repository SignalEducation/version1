.row
  .col-md-12
    -@enrollments.each do |enrollment|
      .card.card-dashboard
        .card-outer{style: 'height: 175px;'}
          .card-inner
            .col-sm-8
              %h3.h3{style: 'color: #3E3F5B'}
                =enrollment.subject_course.name
              .card-info
                -total_lesson = enrollment.subject_course.cme_count
                -complete_lesson = enrollment.subject_course_user_log.try(:count_of_cmes_completed) || 0
                -complete_percent = enrollment.subject_course_user_log.try(:percentage_complete)
                %p{style: 'color: #3E3F5B'}
                  ="#{complete_lesson} out of #{total_lesson} lessons completed"
                .progress
                  .progress-bar.cyanbar{'role'=>'progressbar', 'aria-valuenow'=> "#{complete_percent}", 'aria-minvalue'=>'0', 'aria-maxvalue'=>'100', 'style'=>"width: #{complete_percent}% ;" }

            .col-sm-4.text-center.resume-course
              =link_to 'Course', diploma_course_url(enrollment.subject_course.name_url), class: 'btn btn-wide btn-cyan'
            -#.col-sm-4.text-center.resume-course
              -if enrollment.subject_course_user_log.student_exam_tracks.any?
                =link_to 'Resume Course', course_special_link(enrollment.subject_course_user_log.last_element.next_element), class: 'btn btn-wide btn-cyan'
              -else
                =link_to 'Start Course', course_special_link(enrollment.subject_course.first_active_cme), class: 'btn btn-wide btn-cyan'

