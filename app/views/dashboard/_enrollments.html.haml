-if @enrollments.any?
  -@enrollments.each do |enrollment|
    -if enrollment.subject_course
      .card.card-dashboard{style: 'padding: 20px;'}
        .card-dashboard-outer-cover{style: 'height: 175px;'}
          .card-inner
            .col-sm-8.col-xs-12
              %h3.h3{style: 'color: #3E3F5B; margin-bottom: 2px;'}
                =enrollment.subject_course.name
              .card-info.hidden-xs{style: 'padding-top: 0;'}
                %p.p
                  ="#{enrollment.days_until_exam} days until this exam"

            .col-sm-4.col-xs-12.text-center.resume-course.hidden-xs
              .col-sm-12.col-xs-6
                =link_to 'Resume Course', library_special_link(enrollment.subject_course), class: 'btn btn-primary'

              .col-sm-12.col-xs-6
                .card-info.hidden-xs
                  .h4{style: 'margin-bottom: 2px;'}
                    =enrollment.display_percentage_complete
                  .h4
                    Complete


            .col-sm-4.col-xs-12.text-center.resume-course.visible-xs
              .col-xs-12.l-margin-top
                =link_to 'Resume Course', library_special_link(enrollment.subject_course), class: 'btn btn-primary'


-else

  .container-fluid.l-margin-bottom-huge
    .list-wrap
      .row
        -@default_group.subject_courses.all_in_order.each do |course|
          .col-sm-6
            =link_to library_special_link(course), class: 'card card-course', style: 'padding: 0px;' do
              .card-inner.text-center
                %h3.h3.card-title{style: 'color: #3E3F5B; '}
                  =course.try(:name)
              .card-info.text-center
                .h5{style: 'color: #f092b0; '}
                  =course.try(:additional_text_label)

              .card-label{style: "background: #{course.highlight_colour};"}
                .row
                  .col-md-12.col-xs-12.text-center
                    %h4{style: 'color: #fff; margin-bottom: 0;'}
                      ='Enrol Now'
