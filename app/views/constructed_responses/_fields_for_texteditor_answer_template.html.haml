.col-sm-12
  #text_editor.editors
    .col-sm-6
      %h6=texteditor_scenario_answer_template.object.id.nil? ? 'New TextEditor Answer Template' : 'Answer Template #' + texteditor_scenario_answer_template.object.id.to_s
    .col-sm-6.l-margin-bottom
      -if texteditor_scenario_answer_template.object.id.nil?
        .btn.btn-red.btn-small.pull-right{onclick: '$(this).parent().parent().remove();'}
          ='Remove Me!'

    =texteditor_scenario_answer_template.text_area :text_content, id: "scenario_question_#{scenario_question.options[:child_index]}_answer_template_type_texteditor_#{texteditor_scenario_answer_template.options[:child_index]}"


    :javascript
      $(document).ready(function(){
        $("#scenario_question_#{scenario_question.options[:child_index]}_answer_template_type_texteditor_#{texteditor_scenario_answer_template.options[:child_index]}").kendoEditor({
          encoded: false
        });

      });

