.margin-top
  -if flash[:success] || flash[:error] || flash[:warning]
    =render partial: 'layouts/flash_messages'
.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.subscription_plans.index.h1')

      .row.l-margin-top.l-margin-bottom
        =render partial: 'subscription_plans/index', locals: {the_plans: @student_subscription_plans}

      .row
        .col-sm-12
          =link_to t('views.general.new'), new_subscription_plan_url, class: 'btn btn-red', title: t('views.general.new_tooltip')
