.row
  .col-sm-12
    .page-header
      %h1=t('views.subscription_plans.index.h1')

%div{role: 'tabpanel'}
  %ul.nav.nav-tabs{role: 'tablist'}
    %li.active{role: 'presentation'}
      %a{href: '#students', aria: {controls: 'students'}, role: 'tab', data: {toggle: 'tab'}}
        =t('views.subscription_plans.index.students')
    %li{role: 'presentation'}
      %a{href: '#corporates', aria: {controls: 'corporates'}, role: 'tab', data: {toggle: 'tab'}}
        =t('views.subscription_plans.index.corporates')

  .tab-content
    #students.tab-pane.active{role: 'tabpanel'}
      =render partial: 'subscription_plans/index', locals: {the_plans: @student_subscription_plans}
    #corporates.tab-pane{role: 'tabpanel'}
      =render partial: 'subscription_plans/index', locals: {the_plans: @corporate_subscription_plans}

.row
  .col-sm-12
    =link_to t('views.general.new'), new_subscription_plan_url, class: 'btn btn-success', title: t('views.general.new_tooltip')
