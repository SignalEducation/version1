.l-section-small.is-bg-asphalt
  .l-wrap-large
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            Subscriptions

      .row.l-margin-top.l-margin-bottom
        .col-md-12
          =render partial: 'management_consoles/subscriptions_nav'


      .row
        .col-sm-12
          .box-item.table-box
            .row.l-margin-bottom
              -#TODO - Add search and filter

            .table-responsive
              %table.table.sorted_table{data: {destination: mock_exams_url}, style: 'font-size: 18px;'}
                %thead
                  %tr
                    %th='ID'
                    %th='User'
                    %th='Stripe ID'
                    %th
                    %th
                    %th
                %tbody
                  -@subscriptions.reverse.each do |subscription|
                    %tr
                      %td=subscription.id
                      %td=subscription.user.full_name
                      %td=subscription.stripe_guid
                      %td
                        =link_to 'Show', subscription_show_url(subscription), class: 'btn btn-secondary btn-small'
                      %td
                        =link_to 'User', user_url(subscription.user), class: 'btn btn-primary btn-small'


              =will_paginate @subscriptions, renderer: BootstrapPagination::Rails
