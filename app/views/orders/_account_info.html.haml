.col-md-12
  -if @product_orders.any?
    .corporate-box-item.table-box
      %h3.h-dark
        Courses
      %table.table{style: 'font-size: 18px;'}
        %thead
          %tr
            %th
              =t('views.invoices.form.subject_course')
            %th
              =t('views.invoices.form.date')
            %th
              =t('views.invoices.form.status')
            %th
              =t('views.invoices.form.line_total_inc_vat')
        %tbody
          -@product_orders.each do |order|
            %tr
              %td
                =order.subject_course.name.to_s.truncate(20)
              %td
                =humanize_datetime(order.created_at)
              %td
                =order.current_status.to_s.capitalize
              %td
                =number_in_local_currency(order.product.price, order.product.currency_id)
              %td
                -#=link_to subscription_invoices_url(order.id, format: 'pdf'), target: '_blank' do
                  .btn.btn-purple.btn-small.pull-right
                    View

  -if @mock_exam_orders.any?
    .corporate-box-item.table-box
      %h3.h-dark
        Mock Exams
      %table.table{style: 'font-size: 18px;'}
        %thead
          %tr
            %th
              =t('views.mock_exams.form.name')
            %th
              =t('views.invoices.form.date')
            %th
              =t('views.invoices.form.status')
            %th
              =t('views.invoices.form.line_total_inc_vat')
            %th
        %tbody
          -@mock_exam_orders.each do |order|
            %tr
              %td
                =order.mock_exam.name.to_s.truncate(20)
              %td
                =humanize_datetime(order.created_at)
              %td
                =order.current_status.to_s.capitalize
              %td
                =number_in_local_currency(order.product.price, order.product.currency_id)
              %td
                =link_to order.mock_exam.file.url, target: '_blank' do
                  .btn.btn-purple.btn-small.pull-right
                    View
