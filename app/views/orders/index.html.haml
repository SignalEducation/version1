.margin-top
  -if flash[:success] || flash[:error] || flash[:warning]
    =render partial: 'layouts/flash_messages'
.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.orders.index.h1')

      .row.l-margin-top.l-margin-bottom
        .col-md-12.l-margin-top-big
          .no-image-box-item.table-box
            .table-responsive
              =will_paginate @orders, renderer: BootstrapPagination::Rails
              %table.table.sorted_table{style: 'font-size: 18px;', data: {destination: white_papers_url}}
                %thead
                  %tr
                    %th=t('views.orders.index.mock_exam_id')
                    %th=t('views.orders.index.user_id')
                    %th=t('views.orders.index.current_status')
                    %th
                    %th
                    %th
                    %th
                %tbody
                  -@orders.each do |order|
                    %tr{id: order.id}
                      %td=order.product.mock_exam.try(:name)
                      %td=order.user.full_name
                      %td=order.current_status
                      %td
                        =link_to t('views.orders.index.order'), order, class: 'btn btn-red btn-small'
                      %td
                        -if order.product.mock_exam
                          =link_to t('views.orders.index.mock_exam_id'), mock_exam_url(order.product.mock_exam), class: 'btn btn-purple btn-small'
                      %td
                        =link_to t('views.orders.index.user_id'), user_url(order.user_id), class: 'btn btn-purple btn-small'

