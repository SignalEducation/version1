.payment-details.credit-card
  .payment-errors
    .form-group.cc
      .clearfix
        #card-element
        #card-errors{role: 'alert'}

    .custom-control.custom-control-simple.custom-checkbox
      %input{type: "checkbox", id: 'terms_and_conditions', class: 'custom-control-input style-checkbox', required: true}
      %label.custom-control-label{for: 'terms_and_conditions'}
        %span.custom-check
        %span.custom-label
          =t('views.general.terms_and_conditions')

    .mb-2
      %h4.m-0
        Total:
        %span.value
          =number_in_local_currency(@product.price, @product.currency_id)
    .text-center
      = f.button :submit, class: 'btn btn-primary w-100 mb-2', id: 'card_submit' do
        ='Purchase Mock Exam'

