.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.orders.show.h1')
            \#
            =@order.id
      .row.l-margin-top.l-margin-bottom
        .col-md-12.l-margin-top-big
          .no-image-box-item.table-box
            .table-responsive
              %table.table.table-bordered.l-margin-top
                %tr
                  %td.col-sm-4=t('views.orders.form.product_id')
                  %td.col-sm-8=@order.product.name
                %tr
                  %td.col-sm-4=t('views.orders.form.subject_course_id')
                  %td.col-sm-8=@order.subject_course.name
                %tr
                  %td.col-sm-4=t('views.orders.form.user_id')
                  %td.col-sm-8=@order.user.name
                %tr
                  %td.col-sm-4=t('views.orders.form.stripe_guid')
                  %td.col-sm-8=@order.stripe_guid
                %tr
                  %td.col-sm-4=t('views.orders.form.stripe_customer_id')
                  %td.col-sm-8=@order.stripe_customer.name
                %tr
                  %td.col-sm-4=t('views.orders.form.live_mode')
                  %td.col-sm-8=tick_or_cross(@order.live_mode)
                %tr
                  %td.col-sm-4=t('views.orders.form.current_status')
                  %td.col-sm-8=@order.current_status
                %tr
                  %td.col-sm-4=t('views.orders.form.coupon_code')
                  %td.col-sm-8=@order.coupon_code
              %p
                =link_to t('views.general.back'), orders_url
                |
                =link_to t('views.general.edit'), edit_order_url(id: @order.id), title: t('views.general.edit_tooltip')
