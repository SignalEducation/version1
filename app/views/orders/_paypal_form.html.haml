    = f.button :submit, class: 'btn btn-img mb-4', id: 'paypal_submit' do
      =image_tag("https://www.paypalobjects.com/webstatic/en_US/i/buttons/checkout-logo-large.png", :alt => "PayPal Dummy Button")

