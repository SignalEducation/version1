.margin-top
  -if flash[:success] || flash[:error] || flash[:warning]
    =render partial: 'layouts/flash_messages'
.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =t('views.marketing_categories.index.h1')
      .row.l-margin-top.l-margin-bottom
        .col-md-12.l-margin-top-big
          .no-image-box-item.table-box
            .table-responsive
              =will_paginate @marketing_categories, renderer: BootstrapPagination::Rails
              %table.table.table-bordered.l-margin-top
                %thead
                  %tr
                    %th=t('views.marketing_categories.form.name')
                    %th=t('views.marketing_tokens.index.h1')
                    %th
                %tbody
                  -@marketing_categories.each do |marketing_category|
                    %tr{id: marketing_category.id}
                      %td=marketing_category.name
                      %td=marketing_category.marketing_tokens.count
                      %td
                        =link_to t('views.general.show'), marketing_category_url(marketing_category), class: 'btn btn-cyan btn-small'
                        - if marketing_category.editable?
                          =link_to t('views.general.edit'), edit_marketing_category_url(marketing_category), class: 'btn btn-cyan btn-small'
                        -if marketing_category.destroyable?
                          =link_to t('views.general.delete'), marketing_category, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-red btn-small'

      .row
        =link_to t('views.general.new'), new_marketing_category_url, class: 'btn btn-red', title: t('views.general.new_tooltip')
        =link_to t('views.marketing_tokens.index.h1'), marketing_tokens_url, class: 'btn btn-cyan'
