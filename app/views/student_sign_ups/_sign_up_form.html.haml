=form_for @user, url: create_student_url do |f|
  =f.hidden_field :locale, value: (params[:locale] || 'en')
  =f.hidden_field :terms_and_conditions, id: 'hidden_term_and_conditions'
  =f.hidden_field :communication_approval, id: 'hidden_communication_approval'

  #sign_up.form
    .row
      =render partial: 'layouts/error_messages', locals: {thing: @user, message: t('views.home_pages.sign_up_form.error_panel_caption')}
      .col-sm-6
        .form-group
          =f.text_field :first_name, placeholder: t('views.users.form.your_first_name'), class: 'form-control', required: true
      .col-sm-6
        .form-group
          =f.text_field :last_name, placeholder: t('views.users.form.your_last_name'), class: 'form-control', required: true
      .col-sm-6
        .form-group
          =f.email_field :email, placeholder: t('views.users.form.your_email'), class: 'form-control', required: true
      .col-sm-6
        .form-group
          =f.password_field :password, placeholder: t('views.users.form.create_password'), class: 'form-control', required: true

      .col-sm-6
        .form-group.l-margin-top
          %label.check.communication_approval{style: 'color: #fff;'}
            %input{type: 'checkbox', id: 'communication_approval', required: true}
              %span
                %i.fa.fa-check
              %span
                ='I agree to receiving communication from LearnSignal, you can unsubscribe at any time'

      .col-sm-6
        .form-group.l-margin-top
          %label.check.terms_and_conditions{style: 'color: #fff;'}
            %input{type: 'checkbox', id: 'terms_and_conditions', required: true}
              %span
                %i.fa.fa-check
              ='I Agree to LearnSignal'
              =link_to 'Terms & Conditions', terms_and_conditions_url, style: 'color: #fff;', target: '_blank'


  .lsbtn-base
    =link_to '#' do
      .lsbtn.open-form
        Start your free trial today


    = f.button :submit, class: 'lsbtn submit hidden' do
      Start your free trial today


  .sk-circle.text-center.hidden
    .sk-circle1.sk-child
    .sk-circle2.sk-child
    .sk-circle3.sk-child
    .sk-circle4.sk-child
    .sk-circle5.sk-child
    .sk-circle6.sk-child
    .sk-circle7.sk-child
    .sk-circle8.sk-child
    .sk-circle9.sk-child
    .sk-circle10.sk-child
    .sk-circle11.sk-child
    .sk-circle12.sk-child

  .obs-nocc No credit card required. Set-up takes one minute.


:javascript

  $("#new_user").submit(function(ev) {
    ev.preventDefault();
    $(".sk-circle").removeClass('hidden');
    $("#free .submit").hide();
    this.submit();
  });

  $('input[type="checkbox"]').on('change', function() {
    if($('#terms_and_conditions').prop('checked') == true) {
      $("#hidden_term_and_conditions").val('true');
    } else if($('#terms_and_conditions').prop('checked') == false) {
      $("#hidden_term_and_conditions").val('false');
    }
  });

  $('input[type="checkbox"]').on('change', function() {
    if($('#communication_approval').prop('checked') == true) {
      $("#hidden_communication_approval").val('true');
    } else if($('#communication_approval').prop('checked') == false) {
      $("#hidden_communication_approval").val('false');
    }
  });

