.container-bg
  .container
    %article.text-center.py-5.py-sm-5
      .px-3.px-lg-0
        -if @home_page&.stats_content && !@home_page.stats_content.blank?
          .row
            -@home_page.stats_content.split('*').each do |stat|
              .col
                .pb-4.pb-md-1.d-flex.flex-md-column.align-items-center
                  %p.h4.m-0.text-left.text-md-center
                    =stat.html_safe

        -else
          .row.row-lg
            .col-6.col-md-3
              .pb-4.pb-md-1.d-flex.flex-md-column.align-items-center
                %p.h4.m-0.text-left.text-md-center
                  %span.text-mint
                    ='25,000+'
                  ='Students'
            .col-6.col-md-3
              .pb-4.pb-md-1.d-flex.flex-md-column.align-items-center
                %p.h4.m-0.text-left.text-md-center
                  %span.text-mint
                    ='130'
                  ='Countries'
            .col-6.col-md-3
              .pb-4.pb-md-1.d-flex.flex-md-column.align-items-center
                %p.h4.m-0.text-left.text-md-center
                  %span.text-mint
                    ='1.9 million hours'
                  %br/
                  ='Lectures Watched'
            .col-6.col-md-3
              .pb-4.pb-md-1.d-flex.flex-md-column.align-items-center
                %p.h4.m-0.text-left.text-md-center
                  %span.text-mint
                    ='9.5 million'
                  %br/
                  ='Questions Completed'
