=render partial: 'layouts/external_banner'
#wrapper
  -#loading
  %header#header
    =render 'layouts/landing_navbar'

  %section#free.diag-r-down
    .tmain
      .tbase
        .container
          .row
            .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
              %h1.title1
                Give yourself your best chance of passing your ACCA first time.

              =render partial: 'sign_up_form'

            .col-lg-2.col-md-1
              .approved
                =image_tag('acca_approved.png')


  %section#explore
    .container
      %h2.title1
        Explore our ACCA courses
      %h2.subtitle
        Taking your accounting skills to the next level.
      .row
        -@group.active_children.all_in_order.each do |course|
          .col-md-4.col-sm-6
            =link_to library_special_link(course) do
              .course
                .tmain
                  .tbase
                    =course.name
                .bg{style: "background: url(#{course.background_image.url});"}


      .lsbtn-base
        =link_to 'Get started', new_student_url, class: 'lsbtn'




  %section#what.diag-l-up
    .container
      %h2.title1
        What you get from us
      %ul
        %li
          .item
            .img
              =image_tag('what1.png')
            .desc Access anytime, anywhere.
        %li
          .item
            .img
              =image_tag('what2.png')
            .desc Topic-by-topic, bite-size lectures.
        %li
          .item
            .img
              =image_tag('what3.png')
            .desc Notes, MCQs and corrected mock exams.
        %li
          .item
            .img
              =image_tag('what4.png')
            .desc Tutor support
      .lsbtn-base
        =link_to 'Try us out for free', new_student_url, class: 'lsbtn'
      .obs-nocc No credit card details needed!



  %section#reviews
    =render partial: 'layouts/image_slider'


  %section#homeblog
    .container
      %h2.title1 Get free advice and tips
      -if @home_page && @home_page.blog_posts
        .posts
          .row
            -@home_page.blog_posts.each do |blog_post|
              .col-md-4.col-sm-6
                .post
                  .photo
                    =link_to blog_post.url, target: '_blank' do
                      =image_tag(blog_post.image.url)

                  .cat
                    =link_to blog_post.url, target: '_blank' do
                      .hu
                        Blog
                  .title
                    =link_to blog_post.url, target: '_blank' do
                      .hu
                        =blog_post.title
                  .excerpt
                    =link_to blog_post.url, target: '_blank' do
                      .hu
                        =blog_post.description



  %section#subscribe.diag-l-up.bg-gradient1
    .container
      %h2.title1 Get fortnightly ACCA insider knowledge
      %h2.subtitle Direct to your inbox.
      #response
        =form_tag('/home_page_subscribe', method: 'post', id: 'mailchimpform', remote: 'true') do
          .row
            .col-md-4.col-md-offset-1.col-sm-6
              .form-group
                =text_field(:first_name, :address, {id: 'name', placeholder: 'Your first name', class: 'form-control'})
            .col-md-4.col-sm-6
              .form-group
                =email_field(:email, :address, {id: 'email', placeholder: 'Your email address', class: 'form-control'})
            .col-md-2.col-md-offset-0.col-sm-4.col-sm-offset-4
              .form-group
                %button.lsbtn.s{:type => "submit"} Subscribe
      .sep
      .row
        .col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3.col-xs-6.col-xs-offset-3
          %a.lsbtn.v2{href: 'http://blog.learnsignal.com/', target: '_blank'} Visit our blog


  -#%section#tips
    .container
      %h2.title1 Get Jamie’s 3 free tips on passing your ACCA.
      .video
        .play
          #vimeo-player.vimeo-player

        .about Meet course tutor Jamie. He’s helped learners all over the world pass their ACCA.




  %section#whenever.bg-gradient1
    .container
      .devices
        =image_tag('devices.png')
      %h2.title1 Study whenever and wherever you want
      %h2.subtitle With 24/7, 365 learning on any device, the days of inflexible classroom study are over.
      .lsbtn-base
        =link_to 'Get free course access', new_student_url, class: 'lsbtn'
      .obs-nocc No credit card details needed!


  %section#plans
    .container
      %h2.title1 Only pay for the access you need.
      %h2.subtitle2
        ="After your #{(ENV['FREE_TRIAL_LIMIT_IN_SECONDS'].to_i/60).to_s} minutes of free access, you can pick which plan suits you best."
      %ul.plans.clearfix
        -@subscription_plans.each do |plan|
          %li.plan{class: plan_interval(plan.payment_frequency_in_months)}
            .base
              .topbox
                -if plan.payment_frequency_in_months == 3
                  %span Our most popular payment plan
              .box
                .name
                  =t("views.general.payment_frequency_in_months.a#{plan.payment_frequency_in_months}")
                %ul.details.fa-ul
                  %li
                    %i.fa-li.fa.fa-check
                    Get unlimited access
                  %li
                    %i.fa-li.fa.fa-check
                    Cancel anytime
                  -#%li
                    %i.fa-li.fa.fa-check
                    =t("views.general.subscription_ideal_line.a#{plan.payment_frequency_in_months}")
                  -#%li
                    %i.fa-li.fa.fa-check
                    -# TODO Add plans free mock exams count here
                    =#'corrected mock exams'

                .price
                  =plan.currency.format_number(plan.price)

                -#unless plan.payment_frequency_in_months == 1
                  -# TODO change this display actual discount and saving values
                  .promo
                    .line1
                      18% OFF
                    .line2
                      Save €25

              .lsbtn-base
                =link_to new_student_url, class: 'lsbtn' do
                  Get Started For Free




  %section#cancel.bg-gradient1
    .container
      %h2.title1
        %span
          And don’t forget,
          %strong
            you can cancel anytime.
      %h2.title1
        %span
          No lengthy commitments or obligations.
          %br/

  %section#through
    .container
      .row
        .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
          %h2.title1 We’re here to guide you through.
          %h3.subtitle All the team here at LearnSignal are 100% dedicated to helping you pass your ACCA exams first time around. If you have any questions or concerns about enrolling in our online learning programme then we’re here for you, and we’d love to help.
          .lsbtn-base
            %a{data: {remodal: {target: 'contact-us-modal'}}, class: 'lsbtn v3'}
              ='Chat with our experts'



