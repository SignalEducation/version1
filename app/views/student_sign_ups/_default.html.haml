.landing
  =render partial: 'layouts/external_banner'
  #wrapper
    -#loading
    %header#header
      .container
        #logo
          =link_to home_url do
            =image_tag('ls-logo-transparent.svg', class: 'nav-logo')


    %section.diag-r-down{id: (@home_page.background_image && !@home_page.background_image.empty?) ? @home_page.background_image : 'free'}
      .tmain
        .tbase
          .container
            .row
              .col-md-10
                %h1.title1
                  -if @home_page && @home_page.header_heading && !@home_page.header_heading.empty?
                    =@home_page.header_heading
                  -else
                    ='Want to pass your ACCA exams first time?'

                %h2.subtitle
                  -if @home_page && @home_page.header_paragraph && !@home_page.header_paragraph.empty?
                    =@home_page.header_paragraph
                  -else
                    ='Study whenever and wherever you want. Get the right instructions from expert tutors. Access expert guidance whenever you need it.'

                .lsbtn-base
                  -if @home_page && @home_page.header_button_link && !@home_page.header_button_link.empty?
                    =link_to @home_page.header_button_link, class: 'lsbtn', target: '_blank' do
                      -if @home_page && @home_page.header_button_text && !@home_page.header_button_text.empty?
                        =@home_page.header_button_text
                      -else
                        ='Get free course access'
                        %i.fa.fa-chevron-right

                  -else
                    =link_to new_student_url, class: 'lsbtn' do
                      -if @home_page && @home_page.header_button_text && !@home_page.header_button_text.empty?
                        =@home_page.header_button_text
                      -else
                        ='Get free course access'
                        %i.fa.fa-chevron-right

                .obs-nocc
                  -if @home_page && @home_page.header_button_subtext
                    =@home_page.header_button_subtext
                  -else
                    ='No credit card details needed!'

              .col-md-2
                .approved
                  =image_tag('acca_approved.png')



    -if @home_page && @home_page.blog_posts && @home_page.blog_posts.any?
      %section#homeblog
        .container
          %h2.title1 Access our latest free advice
          .posts.first
            .row
              -@home_page.blog_posts.each do |blog_post|
                .col-md-4.col-sm-6
                  .post
                    .photo
                      =link_to blog_post.url, target: '_blank' do
                        =image_tag(blog_post.image.url)

                    .cat
                      =link_to blog_post.url, target: '_blank' do
                        .hu
                          Blog
                    .title
                      =link_to blog_post.url, target: '_blank' do
                        .hu
                          =blog_post.title
                    .excerpt
                      =link_to blog_post.url, target: '_blank' do
                        .hu
                          =blog_post.description



          .row.btnset
            .col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3.col-xs-6.col-xs-offset-3
              %a.lsbtn.v3{href: 'http://blog.learnsignal.com/', target: '_blank'} Visit our blog


    %section#what
      .container
        %h2.title1 What you get
      %ul
        %li
          .item
            .img
              =image_tag('what1.png')
            .desc Access anytime, anywhere.
        %li
          .item
            .img
              =image_tag('what2.png')
            .desc Topic-by-topic, bite-size lectures.
        %li
          .item
            .img
              =image_tag('what3.png')
            .desc Notes, MCQs and corrected mock exams.
        %li
          .item
            .img
              =image_tag('what4.png')
            .desc Tutor support
            .desc 24 hours a day
        .lsbtn-base
          -if current_user && current_user.trial_or_sub_user?
            =link_to 'Get full access', new_subscription_url, class: 'lsbtn'
          -else
            =link_to 'Get free access', new_student_url, class: 'lsbtn'




    %section#trusted
      .container
        .inner
          %h2.title1 Trusted by learners all over the world.
          %p The days of in-person training have become impractical. Issues with memory retention, data overload and poor quality trainers have made in-person training ineffective. That’s why we’ve created our adaptive learning platform, so you can access your learning anywhere and anytime that you need it.
        .lsbtn-base
          -if current_user && current_user.trial_or_sub_user?
            =link_to 'Try us out now', new_subscription_url, class: 'lsbtn'
          -else
            =link_to 'Try us out for free', new_student_url, class: 'lsbtn'

        .obs-nocc No credit card details needed!





    -if @group
      %section#explore
        .container
          %h2.title1
            ="Explore our #{@group.name} courses"
          %h2.subtitle
            Taking your accounting skills to the next level.
          .row
            -@group.active_children.all_in_order.each do |course|
              .col-md-4.col-sm-6
                =link_to library_special_link(course) do
                  .course
                    .tmain
                      .tbase
                        =course.name
                    .bg{style: "background: url(#{course.background_image.url});"}


          -if current_user && current_user.trial_or_sub_user?
            .btn-base
              =link_to 'Get started', new_subscription_url, class: 'lsbtn'

          -else
            .btn-base
              =link_to 'Get started', new_student_url, class: 'lsbtn'


    -elsif @subject_course
      %section#explore
        .container
          %h2.title1
            ="Explore our #{@subject_course.name} modules"
          %h2.subtitle
            Taking your skills to the next level.
          .row
            -@subject_course.active_children.all_in_order.each do |course_module|
              .col-md-4.col-sm-6
                =link_to library_special_link(@subject_course) do
                  .course
                    .tmain
                      .tbase
                        =course_module.name
                    .bg{style: "background: #35B8CF;"}


          .btn-base
            -if current_user && current_user.trial_or_sub_user?
              =link_to 'Get started', new_subscription_url, class: 'lsbtn'
            -else
              =link_to 'Get started', new_student_url, class: 'lsbtn'



    %section#reviews
      =render partial: 'layouts/image_slider'


    %section#plans
      .container
        .row.header
          .col-lg-8.col-lg-offset-1.col-sm-10
            %h2.title1
              Invest in
              %strong your
              future.
            %h2.subtitle2
              ='With LearnSignal, you can gain access to our body of ACCA accounting expert tutors from as little as'
              %strong
                =@subscription_plans.first.currency.format_number(@subscription_plans.first.price).to_s + '.'
              ='We also offer a selection of payment plans to suit you and your study needs.'
          .col-sm-2
            .approved
              =image_tag('acca_approved2.png')

        %ul.plans.clearfix
          -@subscription_plans.each do |plan|
            %li.plan{class: plan_interval(plan.payment_frequency_in_months)}
              .base
                .topbox
                  -if plan.payment_frequency_in_months == 3
                    %span Our most popular payment plan
                .box
                  .name
                    =t("views.general.payment_frequency_in_months.a#{plan.payment_frequency_in_months}")
                  %ul.details.fa-ul
                    %li
                      %i.fa-li.fa.fa-check
                      Get unlimited access
                    %li
                      %i.fa-li.fa.fa-check
                      Cancel anytime

                  .price
                    =plan.currency.format_number(plan.price)

                -if current_user && current_user.trial_or_sub_user?
                  .lsbtn-base
                    =link_to new_subscription_url do
                      .lsbtn
                        %i.fa.fa-check
                        Choose this plan
                -else
                  .lsbtn-base
                    =link_to new_student_url do
                      .lsbtn
                        Get Started For Free


    -if @home_page.mailchimp_subscribe_section && @home_page.mailchimp_list_guid
      %section#subscribe.diag-l-up.bg-gradient1
        .container
          %h2.title1
            -if @home_page.mailchimp_list_guid && @home_page.mailchimp_section_heading
              =@home_page.mailchimp_section_heading
            -else
              ='Get fortnightly ACCA insider knowledge'

          %h2.subtitle
            -if @home_page.mailchimp_list_guid && @home_page.mailchimp_section_subheading
              =@home_page.mailchimp_section_subheading
            -else
              ='Direct to your inbox.'
          #response
            =form_tag('/home_page_subscribe', method: 'post', id: 'mailchimpform', remote: 'true') do
              -if @home_page.mailchimp_subscribe_section && @home_page.mailchimp_list_guid
                =hidden_field_tag(:mailchimp_list_guid, @home_page.mailchimp_list_guid)
              .row
                .col-md-4.col-md-offset-1.col-sm-6
                  .form-group
                    =text_field(:first_name, :address, {id: 'name', placeholder: 'Your first name', class: 'form-control'})
                .col-md-4.col-sm-6
                  .form-group
                    =email_field(:email, :address, {id: 'email', placeholder: 'Your email address', class: 'form-control'})
                .col-md-2.col-md-offset-0.col-sm-4.col-sm-offset-4
                  .form-group
                    %button.lsbtn.s{:type => "submit"} Subscribe


    %section#through
      .container
        .row
          .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
            %h2.title1 We’re here to guide you through.
            %h2.subtitle All the team here at LearnSignal are 100% dedicated to helping you pass your ACCA exams first time around. If you have any questions or concerns about enrolling in our online learning programme then we’re here for you, and we’d love to help.
            .lsbtn-base
              %a{data: {remodal: {target: 'contact-us-modal'}}, class: 'lsbtn v3'}
                ='Chat with our experts'

=render partial: 'footer_pages/contact_us_form_modal'
