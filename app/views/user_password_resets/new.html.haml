.row
  .col-sm-6.col-sm-offset-3
    .page-header
      %h1=t('views.user_password_resets.new.h1')
.row
  .col-sm-6.col-sm-offset-3
    .well.well-sm
      %p=t('views.user_password_resets.new.paragraph_1')
      =form_tag(user_password_resets_url, {class: 'form', role: 'form'}) do
        .form-group
          =email_field_tag :email_address, nil, placeholder: t('views.users.form.email_placeholder'), class: 'form-control'
        .form-group
          =submit_tag t('views.general.save'), class: 'btn btn-success'
