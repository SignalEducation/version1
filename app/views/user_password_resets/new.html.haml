.l-section-small.is-bg-asphalt
  .l-wrap
    .container
      .row
        .col-lg-10.col-lg-offset-1
          %h1.title1
            =t('views.user_password_resets.new.h1')

      .row.l-margin-top
        .col-lg-6.col-lg-offset-3.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1
          .forgot-password-modal.l-margin-top
            =form_tag(user_password_resets_url, {class: 'form', role: 'form'}) do
              .col-sm-12
                %p
                  =t('views.user_password_resets.new.paragraph_1')

                =label_tag :email, 'E-mail'
                %br/
                %div#validation-div
                  =email_field_tag :email_address, nil, placeholder: t('views.users.form.email_placeholder'), class: 'form-control', id: '#email-field'
              .col-md-8.col-md-offset-2.l-margin-top-big
                = submit_tag 'SEND MY PASSWORD', class: 'btn btn-red l-margin-right-big l-padding-side-3x', id: 'btn-send-password'



