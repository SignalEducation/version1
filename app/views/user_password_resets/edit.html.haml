.row
  .col-sm-6.col-sm-offset-3
    .page-header
      %h1=t('views.user_password_resets.edit.h1')
.row
  .col-sm-6.col-sm-offset-3
    =form_tag(user_password_reset_url(id: @user.password_reset_token), {method: :put, class: 'form-horizontal', role: 'form'}) do
      .well.well-sm
        %p=t('views.user_password_resets.edit.paragraph_1')
        .form-group
          =label_tag :password, t('views.users.form.password'), class: 'control-label col-sm-5'
          .col-sm-7
            =password_field_tag :password, nil, placeholder: t('views.users.form.password_placeholder'), class: 'form-control'
        .form-group
          =label_tag :password_confirmation, t('views.users.form.password_confirmation'), class: 'control-label col-sm-5'
          .col-sm-7
            =password_field_tag :password_confirmation, nil,  placeholder: t('views.users.form.password_confirmation_placeholder'), class: 'form-control'

      =submit_tag t('views.general.save'), class: 'btn btn-success'
