.modal.fade{id: 'ask-a-tutor-modal', tabindex: '-1', role: 'dialog', 'aria-labelledby': 'askTutorQuestion', 'aria-hidden': 'true'}
  .modal-dialog{role: 'document'}
    .modal-content
      %button.btn.btn-icon.modal-close{'data-dismiss': 'modal'}
        %span
          Close
        %i.material-icons.ml-1{'aria-hidden': 'true'}
          close
      .modal-header
        %h3.text-red{id: 'askTutorQuestion'}
          Ask The Tutor A Question


      .modal-body

        -if current_user
          =form_tag(tutor_contact_form_url, {class: 'form py-2', role: 'form', name: 'tutor_contact_form_form'}) do
            =hidden_field_tag :type, @form_type
            .row
              .col-sm-6
                .form-group
                  =label_tag :full_name, 'Name'
                  =text_field_tag :full_name, nil, class: 'form-control', placeholder: 'Full Name', required: true

              .col-sm-6
                .form-group
                  =label_tag :email, 'Email'
                  =email_field_tag :email_address, nil, class: 'form-control', placeholder: 'Email Address', required: true

              .col-sm-12
                .form-group
                  =label_tag :question, 'Question'
                  =text_area_tag :question, nil, class: 'form-control', placeholder: 'Please outline your question', required: true
            .pt-1
              =submit_tag 'Send The Question', class: 'btn btn-primary'

        -else
          %p.font-weight-medium.mb-4.text-purple
            Sorry! A valid account is required to ask a question
          %p.mb-4.text-purple
            Please Sign Up or Sign In

          .modal-footer
            =link_to 'Sign In', sign_in_url, class: 'btn btn-primary', title: 'Sign In'
            =link_to 'Sign Up Now', new_student_url, class: 'btn btn-primary', title: 'Sign Up'


