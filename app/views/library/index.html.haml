-if flash[:success] || flash[:error] || flash[:warning]
  =render partial: 'layouts/flash_messages'
.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.h1.h-separator.h-separator-center.l-margin-bottom-big
            Learn anytime, anywhere
          %p.h5.l-margin-bottom-big
            Learn anytime, anywhere from our library of business-focused courses taught by expert tutors

      .row.l-margin-top-huge.l-margin-bottom-huge
        -@groups.each_with_index do |group|
          .col-sm-6.col-md-4.l-margin-bottom-big.l-margin-top

            =link_to library_special_link(group), class: 'box box-course' do
              .image{style: "background: url(#{group.image.url}) repeat-x 50% 0; background-size: contain;"}
              .box-inner
                .l-margin-top-xl
                  %h2{style: 'margin-bottom: 5px;'}
                    =group.name
                  %p.p
                    =group.description

              .box-label
                %h6.h-white{style: 'margin-top: 0px; margin-bottom: 0px;'}
                  Browse Courses
