.row
  .col-xs-12
    .col-xs-12
      .col-xs-1.col-sm-1
        .left-side-meta
          - if current_user && grandchild.available_to_user(current_user, @subject_course_user_log)[:view] == true

            -if current_user && @completed_cmeuls_cme_ids && @completed_cmeuls_cme_ids.include?(grandchild.id)
              -if grandchild.is_video?
                =image_tag('cm_green_play.png')
              -elsif grandchild.is_quiz?
                =image_tag('cm_green_tick.png')
              -elsif grandchild.is_constructed_response?
                =image_tag('cr_green.png')
            -elsif current_user && @incomplete_cmeuls_cme_ids && @incomplete_cmeuls_cme_ids.include?(grandchild.id)
              -if grandchild.is_video?
                =image_tag('cm_red_play.png')
              -elsif grandchild.is_quiz?
                =image_tag('cm_red_tick.png')
              -elsif grandchild.is_constructed_response?
                =image_tag('cr_red.png')
            -else
              -if grandchild.is_video?
                =image_tag('cm_grey_play.png')
              -elsif grandchild.is_quiz?
                =image_tag('cm_grey_tick.png')
              -elsif grandchild.is_constructed_response?
                =image_tag('cr_grey.png')

          - else
            =image_tag('grey_lock_icon.png')


      .col-xs-8.col-sm-7{style: 'padding-left: 12px; padding-top: 4px;'}
        .pull-left
          =grandchild.name
      .col-xs-12.col-sm-4.hidden-xs{style: 'padding-top: 4px;'}
        -if grandchild.temporary_label && !grandchild.temporary_label.empty?
          .side-meta.h6{style: 'color: #EF5153;'}
            =grandchild.temporary_label
        -else
          .side-meta
            -if grandchild.is_video
              -if grandchild.try(:course_module_element_video).try(:duration)
                =humanize_time(grandchild.course_module_element_video.duration)
              -elsif grandchild.try(:estimated_time_in_seconds)
                =humanize_time(grandchild.try(:estimated_time_in_seconds))
            -elsif grandchild.is_quiz
              =grandchild.number_of_questions.to_s + ' ' + t('views.library.show.questions')
