            =@course.try(:description)
          %h3.l-margin-top-big
            More info
          %ul.lined-list
            %li
              =t('views.general.duration')
              =humanize_time(@course.duration.to_i)
            %li
              =t('views.general.updated_at')
              =humanize_datetime(@course.updated_at)
            %li
