.hero-upcoming
  =render partial: 'layouts/transparent_navbar'
  .l-section
    .l-wrap
      .container-fluid
        .row
          .col-md-6.col-md-offset-3
            %h1.h1.h-white.h-separator.h-separator-center.text-center.l-margin-bottom
              =@course.name
            %p.h5.h-white.text-center.l-margin-bottom-big.h-separator
              =@course.try(:short_description)
            %form.form-horizontal
              .row
                .col-sm-12
                  .input-group
                    %input.form-control{:placeholder => "Enter your email address", :type => "text"}
                      %span.input-group-btn
                        %button.btn.btn-red{:type => "button"} Subscribe

-if @course.children.count > 0
  .l-asphalt
    .l-section
      .l-wrap
        .container-fluid
          .row
            .col-sm-12.col-md-8
              %ul.course-topics-list
                -if @course.children.count > 0
                  -@course.children.all_active.all_in_order.each do |child|
                    %li
                      .box-item.upcoming
                        =child.name

            .col-sm-12.col-md-4
              %h3
                =t('views.exam_levels.form.description')
              %p
                -if @course.try(:description)
                  =@course.try(:description)
                -else
                  =@course.parent.try(:description)
              %h3.l-margin-top-big
                =t('views.general.author')
              %p
                -if @course.tutor
                  =@course.tutor.try(:name)
                -else
                  ='Learn Signal'
-else
  .row
    .col-sm-8.col-sm-offset-2
      .col-sm-8
        %h3.l-margin-top-big
          =t('views.exam_levels.form.description')
        %p
          -if @course.try(:description)
            =@course.try(:description)
          -else
            =@course.parent.try(:description)
      .col-sm-4
        %h3.l-margin-top-big
          =t('views.general.author')
        %p
          -if @course.tutor
            =@course.tutor.try(:name)
          -else
            ='Learn Signal'


=render partial: 'layouts/new_footer'