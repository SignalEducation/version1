.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          .group_show{style: "background: url(#{@group.background_image.url})  50% 0 no-repeat;"}
            .row
              .col-md-6.col-md-offset-3.l-margin-top
                %h1.h1.bold.h-white.h-separator.h-separator-center.text-center.html_safe.l-margin-bottom
                  =@group.name
                %p.h5.h-white.text-center
                  =@group.description.to_s.html_safe


  .l-wrap.l-margin-top-big
    .container-fluid
      .row
        -if @courses
          -@courses.each do |course|
            .col-sm-4
              =link_to library_special_link(course), class: 'card card-course' do
                .card-inner.text-center
                  %h3.h3.card-title
                    =course.try(:name)
                .card-info.text-center
                  %p.h5{style: 'color: #f092b0; '}
                    ='Previously F1'

                .card-label{style: "background: #{course.highlight_colour};"}
                  .row
                    .col-md-12.col-xs-12.text-center
                      %h4{style: 'color: #fff;'}

                        ='Applied Knowledge'
