.bg-img.bg-group-show{style: "background-image: url(#{@group.background_image.url});"}
  .container
    %article.hero.pb-6
      %h1.h1-mega.text-white
        =@group.name
      %h5.text-torquoise
        =@group.description.to_s.html_safe

#library.bg-asphalt
  .container.py-6
    .row.row-lg
      -if @courses
        -@courses.each do |course|
          .col-lg-4.col-sm-6
            =link_to library_special_link(course), class: 'card card-library card-sm mb-5 text-center flex-column', style: 'padding: 0px;' do
              .card-header{style: "background: #{course.highlight_colour};"}
                %h5.text-white.text-truncate.mb-0
                  =course.category_label
              .card-body
                %h4.mb-3
                  =course.name

                %p.mb-2.text-purple3
                  =course.additional_text_label

              .card-footer
                %span.with-arrow
                  Show Course







-#.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          .group_show{style: "background: url(#{@group.background_image.url})  50% 0 no-repeat;"}
            .row
              .col-md-6.col-md-offset-3.l-margin-top
                %h1.h1.bold.h-white.h-separator.h-separator-center.text-center.html_safe.l-margin-bottom
                  =@group.name
                %p.h5.h-white.text-center
                  =@group.description.to_s.html_safe


  .l-wrap.l-margin-top-big
    .container-fluid
      .row.l-margin-bottom-huge
        -if @courses
          -@courses.each do |course|
            .col-sm-4
              =link_to library_special_link(course), class: 'card card-course', style: 'padding: 0px;' do
                .card-inner.text-center
                  %h3.h3.card-title
                    =course.try(:name)
                .card-info.text-center
                  %p.h5{style: 'color: #f092b0; '}
                    =course.try(:additional_text_label)

                .card-label{style: "background: #{course.highlight_colour};"}
                  .row
                    .col-md-12.col-xs-12.text-center
                      %h4{style: 'color: #fff;'}
                        =(course.category_label && !course.category_label.blank?) ? course.category_label : 'Enrol Now'
