-if current_user
  =intercom_script_tag({app_id: (ENV['intercom_app_id']),
    user_id: current_user.id,
    email: current_user.email,
    name: current_user.full_name,
    created_at: current_user.created_at,
    custom_data: {guid: current_user.guid,
    user_group: current_user.user_group.try(:name),
    free_trial: current_user.try(:free_member?),
    email_verified: current_user.try(:email_verified),
    topic_interest: current_user.try(:topic_interest),
    email_verification_code: current_user.try(:email_verification_code),
    company: {id: current_user.try(:corporate_customer_id),
    name: current_user.try(:corporate_customer).try(:organisation_name),
    created_at: current_user.try(:corporate_customer).try(:created_at),
    }}})