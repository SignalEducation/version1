%footer.footer{class: (controller_name == 'student_sign_ups' && action_name != 'new') ? 'footer-light' : 'footer-dark'}
  .container.position-relative.py-6
    .row
      .col-12.col-md-6.col-lg-4
        =link_to home_url, class: 'mb-4' do
          =image_tag((controller_name == 'student_sign_ups' && action_name != 'new') ? 'Learnsignal-Logo.svg' : 'learnsignal-Logo-white.svg', class: 'mb-1 logo', alt: 'LearnSignal Logo')

      .col-6.col-md-3.col-lg-4.mb-4
        .row
          .col-lg-6
            %ul.nav.flex-column
              -if @groups
                -@groups.each do |group|
                  -if group.active && group.active_children.any?
                    %li.nav-item
                      =link_to group.name, library_special_link(group), class: 'nav-link'


              %li.nav-item
                =link_to 'ACCA Info', acca_info_url, class: 'nav-link'

          .col-lg-6
            %ul.nav.flex-column
              %li.nav-item
                %a{href: 'http://blog.learnsignal.com/', class: 'nav-link', target: '_blank'} Blog
              %li.nav-item
                =link_to 'Lecturers', tutors_url, class: 'nav-link'
              %li.nav-item
                =link_to 'Prep Products', prep_products_url, class: 'nav-link'
              %li.nav-item
                =link_to 'FAQs', public_faqs_url, class: 'nav-link'

              -@footer_landing_pages.each do |landing_page|
                %li.nav-item
                  =link_to landing_page.name, footer_landing_page_url(landing_page.public_url), class: 'nav-link'


      .col-6.col-md-3.col-lg-4.mb-4
        .row
          .col-lg-6
            %ul.nav.flex-column
              %li.nav-item
                =link_to 'Contact', contact_url, class: 'nav-link'
              %li.nav-item
                =link_to 'Privacy Policy', privacy_policy_url, class: 'nav-link'
              %li.nav-item
                =link_to 'Terms of Use', terms_and_conditions_url, class: 'nav-link'

          .col-lg-6
            %ul.nav.flex-column
              %li.nav-item
                %a.nav-link{:href => "https://www.facebook.com/learnsignal1/"} Facebook
              %li.nav-item
                %a.nav-link{:href => "https://twitter.com/learnsignal"} Twitter
              %li.nav-item
                %a.nav-link{:href => "https://www.linkedin.com/company/learnsignal"} Linkedin
