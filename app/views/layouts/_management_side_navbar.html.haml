#sidebar-wrapper.text-center
  .sidebar-brand
    .brand-logo
      =link_to root_url do
        =image_tag('learnsignal-Logo-white.svg', class: 'logo')


  %ul.sidebar-nav
    %li.first-li
      -if current_user.non_student_user?
        =link_to 'Overview', management_consoles_url, class: "#{request.url == management_consoles_url ? "active" : 'inactive'}"

    -if current_user.user_management_access?
      %li
        =link_to 'Users', users_url, class: "#{request.url == users_url ? "active" : 'inactive'}"

    -if current_user.exercise_corrections_access?
      %li
        =link_to 'Exercises', admin_exercises_path, class: "#{request.url == admin_exercises_path ? "active" : 'inactive'}"

    -if current_user.content_management_access?
      %li
        =link_to 'Course Content', admin_courses_url, class: "#{request.url == admin_courses_url ? "active" : 'inactive'}"
      %li
        =link_to 'Sittings + Enrolments', exam_sittings_url, class: "#{request.url == exam_sittings_url ? "active" : 'inactive'}"

    -if current_user.stripe_management_access?
      %li
        =link_to 'Plans + Products', subscription_plans_url, class: "#{request.url == subscription_plans_url ? "active" : 'inactive'}"

    -if current_user.system_requirements_access? || current_user.stripe_management_access? || current_user.user_management_access?
      %li
        =link_to 'Reports', reports_url, class: "#{request.url == reports_url ? "active" : 'inactive'}"

    -if current_user.system_requirements_access?
      %li
        =link_to 'System Requirements', system_requirements_url, class: "#{request.url == system_requirements_url ? "active" : 'inactive'}"

    -if current_user.system_requirements_access?
      %li
        =link_to 'Bearer API Keys', admin_bearers_url, class: "#{request.url == admin_bearers_url ? "active" : 'inactive'}"

    -if current_user.marketing_resources_access?
      %li
        =link_to 'External Content', public_resources_url, class: "#{request.url == public_resources_url ? "active" : 'inactive'}"

    -if current_user.developer_access?
      %li
        =link_to'Sidekiq', sidekiq_web_path, target: '_blank', class: "#{request.url == sidekiq_web_path ? "active" : 'inactive'}"

    %li
      =link_to 'Return', root_url
