.container.my-4#flash_message
  -if flash[:notice]
    .alert.alert-primary
      =flash[:notice]
  -elsif flash[:success]
    .alert.alert-success
      =flash[:success]
  -elsif flash[:alert]
    .alert.alert-warning
      =flash[:alert]
  -elsif flash[:warning]
    .alert.alert-warning
      =flash[:warning]
  -elsif flash[:error]
    .alert.alert-error
      =flash[:error]
  -elsif flash[:modal_success]
    .alert.alert-success
      =flash[:modal_success]
  -elsif flash[:modal_error]
    .alert.alert-error
      =flash[:modal_error]
