.notificationMessageWrapper.my-4#flash_message
  %button.btn.btn-icon.modal-close.notificationMessageWrapper-closeBtn.js-flash-message-close-btn{"data-dismiss" => "modal"}
    %i.material-icons{"aria-hidden" => "true"} close
  -if flash[:notice]
    .notificationMessageWrapper-icon.notice
      .i.material-icons check_circle
    %div
      .notificationMessageWrapper-title
        =flash[:notice]
      .notificationMessageWrapper-desc
  -elsif flash[:success]
    .notificationMessageWrapper-icon.success
      .i.material-icons check_circle
    %div
      .notificationMessageWrapper-title
        =flash[:success]
      .notificationMessageWrapper-desc
  -elsif flash[:alert]
    .notificationMessageWrapper-icon.alert
      .i.material-icons check_circle
    %div
      .notificationMessageWrapper-title
        =flash[:alert]
      .notificationMessageWrapper-desc
  -elsif flash[:warning]
    .notificationMessageWrapper-icon.warning
      .i.material-icons check_circle
    %div
      .notificationMessageWrapper-title
        =flash[:warning]
      .notificationMessageWrapper-desc
  -elsif flash[:error]
    .notificationMessageWrapper-icon.error
      .i.material-icons error_outline
    %div
      -# .notificationMessageWrapper-title
      -#   =flash[:error]
      .notificationMessageWrapper-desc
        =flash[:error]
  -elsif flash[:modal_success]
    .notificationMessageWrapper-icon.modal_success
      .i.material-icons check_circle
    %div
      .notificationMessageWrapper-title
        =flash[:modal_success]
      .notificationMessageWrapper-desc
  -elsif flash[:modal_error]
    .notificationMessageWrapper-icon.modal_error
      .i.material-icons check_circle
    %div
      .notificationMessageWrapper-title
        =flash[:modal_error]
      .notificationMessageWrapper-desc


:javascript
  $(document).on('ready', function() {
    $('.js-flash-message-close-btn').on('click', function() {
      $('.notificationMessageWrapper#flash_message').fadeOut();
    });
    setTimeout(function() {
        $('.notificationMessageWrapper#flash_message').fadeOut();
    }, 3000);
  });