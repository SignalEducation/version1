#flash_message{style: "#{@banner ? 'padding-top: 22px;' : 'padding-top: 0;'}"}
  -if flash[:notice]
    .alert.alert-info
      =flash[:notice]
  -elsif flash[:success]
    .alert.success
      =flash[:success]
  -elsif flash[:alert]
    .alert.warning
      =flash[:alert]
  -elsif flash[:warning]
    .alert.warning
      =flash[:warning]
  -elsif flash[:error]
    .alert.error
      =flash[:error]
