.header{role: 'banner'}
  %nav.navbar.navbar-default.navbar-transparent
    .navbar-header
      %button.navbar-toggle{type: 'button', data: {toggle: 'collapse', target: '#myNavbar'}}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to home_url do
        =image_tag('ls-logo-red.svg', class: 'logo')
    #myNavbar.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        -if current_user
          %li
            =link_to 'Dashboard', dashboard_special_link
          %li
            =link_to 'Courses', library_url
          -if current_user.free_member?
            -if current_user.valid_free_member?
              %li
                =link_to "#{current_user.days_left} Days left in Trial", user_new_subscription_url(current_user.id), class: 'days-left', title: 'Upgrade your account'
            -elsif current_user.expired_free_member?
              %li
                =link_to 'Upgrade Account', user_new_subscription_url(current_user.id), class: 'days-left', title: 'Upgrade your account'

          -#Student Dropdown
          %li.dropdown.dropdown-normal
            %a#drop.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              =t('views.general.user_name') + current_user.first_name.to_s
              %span.caret
            %ul#menu.dropdown-menu
              %li
                %li=link_to t('views.users.show.h1'), account_url
              %li
                =link_to t('views.general.sign_out'), sign_out_url

        -else
          %li
            =link_to 'Blog', 'http://blog.learnsignal.com/', target: '_blank'
          %li
            =link_to 'Pricing', pricing_url
          %li
            =link_to 'Courses', library_url
          %li
            =link_to 'Sign In', sign_in_url
