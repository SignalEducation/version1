.header{role: 'banner'}
  .l-wrap
    .container-fluid
      %nav.navbar.navbar-default.navbar-transparent
        .navbar-header
          %button.navbar-toggle{type: 'button', data: {toggle: 'collapse', target: '#myNavbar'}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          -if current_user && current_user.corporate_customer?
            =link_to corporate_customer_url(current_user.corporate_customer) do
              =image_tag('ls-logo-red.svg', class: 'logo')
          -else
            =link_to root_url do
              =image_tag('ls-logo-red.svg', class: 'logo')
        #myNavbar.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            -if current_user
              -if current_user.corporate_customer?
                %li
                  =link_to 'Overview', corporate_customer_url(current_user.corporate_customer)
                %li
                  =link_to 'Dashboard', dashboard_url
              -else
                %li
                  =link_to 'Dashboard', dashboard_url
              %li
                =link_to 'Courses', library_url
              -if current_user.subscriptions.count == 1 && current_user.subscriptions[0].free_trial?
                %li
                  =link_to "#{current_user.subscriptions[0].days_left} Days left in Your Trial", user_new_paid_subscription_url(current_user.id), class: 'days-left', title: 'Upgrade your account'



              -#Admin Dropdown
              -if current_user.admin?
                %li.dropdown
                  %a#drop.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                    Admin
                    -#Todo when user notifications are reactivated
                    -#%span.user-notification
                      1
                    %span.caret
                  %ul#menu.dropdown-menu
                    %li=link_to t('views.subscription_plans.index.h1'), subscription_plans_url
                    %li=link_to t('views.subscription_plan_categories.index.h1'), subscription_plan_categories_url
                    %li=link_to t('views.corporate_customers.index.h1'), corporate_customers_url
                    %li=link_to t('views.corporate_groups.index.h1'), corporate_groups_url
                    %li.divider
                    %li=link_to 'Sidekiq', sidekiq_web_path, target: '_blank'
                    %li=link_to t('views.home_pages.index.h1'), home_pages_url
                    %li.divider
                    %li=link_to t('views.groups.index.h1'), groups_url
                    %li=link_to t('views.subject_courses.index.h1'), subject_courses_url

                -#Student Dropdown
              %li.dropdown
                %a#drop.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  =t('views.general.user_name') + current_user.first_name.to_s
                  -#Todo when user notifications are reactivated
                  -#%span.user-notification
                    1
                  %span.caret
                %ul#menu.dropdown-menu
                  -if current_user.corporate_customer?
                    %li=link_to t('views.subject_courses.index.your_courses'), subject_courses_url
                  -elsif current_user.tutor?
                    %li=link_to t('views.subject_courses.index.my_courses'), subject_courses_url
                  -elsif current_user.content_manager?
                    %li=link_to t('views.subject_courses.index.h1'), subject_courses_url
                  -if current_user.admin?
                    %li=link_to t('views.users.index.h1'), users_url
                    %li=link_to t('views.user_activity_logs.index.h1'), user_activity_logs_url
                    %li=link_to t('views.user_groups.index.h1'), user_groups_url
                    %li=link_to t('views.tutor_applications.index.h1'), tutor_applications_url
                    %li=link_to t('views.currencies.index.h1'), currencies_url
                    %li=link_to t('views.countries.index.h1'), countries_url
                    %li=link_to t('views.marketing_categories.index.h1'), marketing_categories_url
                    %li=link_to t('views.marketing_tokens.index.h1'), marketing_tokens_url
                    %li=link_to t('views.referral_codes.index.h1'), referral_codes_url
                    %li=link_to t('views.referred_signups.index.h1'), referred_signups_url
                    %li.divider
                  %li
                    %li=link_to t('views.users.show.h1'), account_url
                  %li
                    =link_to t('views.general.sign_out'), sign_out_url

            -else
              %li
                =link_to 'Why Learn Signal', why_learn_signal_url
              %li
                =link_to 'Pricing', pricing_url
              %li
                =link_to 'Courses', library_url
              %li
                =link_to 'Sign In', sign_in_url
              %li
                %a.signupModal{href: '#', class: 'sign-up-link', data: {toggle: 'modal', target: '#signupModal'}}Sign Up
