#wrapper
  .hidden-xs
    #sidebar-wrapper.text-center
      %ul.sidebar-nav
        %li.first-li
          =link_to t('views.corporate_customers.show.overview'), corporate_customer_url(current_user.corporate_customer)
        %li
          =link_to t('views.corporate_students.index.corp_h1'), corporate_students_url
        %li
          =link_to t('views.corporate_groups.index.corp_h1'), corporate_groups_url
        %li.current-page
          =link_to t('views.subject_courses.index.h1'), subject_courses_url
        %li
          =link_to t('views.users.show.h1'), account_url
        %li
          =link_to t('views.corporate_students.index.corp_managers'), corporate_managers_url
  .margin-top.main-content
    -if flash[:success] || flash[:error] || flash[:warning]
      =render partial: 'layouts/flash_messages'
    .l-section-corp-courses.is-bg-asphalt
      .l-wrap
        .container-fluid
          .row.l-margin-bottom
            .col-md-12
              %h1.l-margin-bottom.l-margin-top.h-separator.h-separator-left{style: 'letter-spacing:1.5px;'}
                ="#{current_user.corporate_customer.organisation_name} Courses"
            .col-md-8
              %p.h6
                Managers can create courses for internal use only.  These courses can be assigned to teams and restricted from others, (e.g. An onboarding course for a New Trainee Team).
          .row.l-margin-top.l-margin-bottom
            .col-md-12.l-margin-top-big
              .no-image-box-item.table-box
                .table-responsive
                  %table.table.sorted_table{data: {destination: subject_courses_url}, style: 'font-size: 18px;'}
                    %thead
                      %tr
                        %th.p Name
                        %th.p Active
                        -if current_user.admin? || current_user.content_manager?
                          %th Live
                          %th Wistia ID
                          %th Tutor
                          %th
                        %th
                        %th
                    %tbody
                      -@courses.each do |subject_course|
                        %tr{id: subject_course.id}
                          %td.p=subject_course.name
                          %td=tick_or_cross(subject_course.active)
                          %td
                            =link_to t('views.general.edit'), edit_subject_course_url(subject_course), class: 'btn btn-small btn-purple'
                            -if subject_course.destroyable?
                              =link_to t('views.general.delete'), subject_course, method: :delete, data: { confirm: t('views.general.delete_confirmation') }, class: 'btn btn-red btn-small'
                          %td
                            =link_to t('views.subject_courses.index.edit_content'), subject_course_url(subject_course), class: 'btn btn-small btn-red'
                  =will_paginate @currencies, renderer: BootstrapPagination::Rails
                  .l-margin-top-big.l-margin-bottom
                    =link_to t('views.subject_courses.index.add_course'), new_subject_course_url, class: 'btn btn-red', title: t('views.general.new_tooltip')
  =render partial: 'layouts/corporate_footer'