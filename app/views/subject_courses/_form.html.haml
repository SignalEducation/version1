.box-item.form-box
  .col-sm-12
    =form_for(@subject_course, html: {class: 'form-horizontal', role: 'form'}) do |f|
      =render partial: '/layouts/error_messages', locals: {thing: @subject_course, message: nil}
      .row
        .col-sm-6
          =f.hidden_field :default_number_of_possible_exam_answers, value: 4

          .form-group
            =f.label :group_id, t('views.subject_courses.form.group_id')
            .input-group.input-group-lg
              =f.collection_select :group_id, @groups, :id, :name, {include_blank: t('views.general.select')}, {class: 'form-control custom-select'}


          .form-group
            =f.label :name, t('views.subject_courses.form.name')
            .input-group.input-group-lg
              =f.text_field :name, placeholder: t('views.subject_courses.form.name_placeholder'), class: 'form-control update-my-url'

          .form-group
            =f.label :name_url, t('views.subject_courses.form.name_url')
            .input-group.input-group-lg
              =f.text_field :name_url, placeholder: t('views.subject_courses.form.name_url_placeholder'), class: 'form-control'


          .form-group
            =f.label :short_description, t('views.subject_courses.form.short_description')
            .input-group.input-group-lg
              =f.text_area :short_description, placeholder: t('views.subject_courses.form.short_description_placeholder'), class: 'form-control', rows: 5

          .form-group
            =f.label :category_label, t('views.subject_courses.form.category_label')
            .input-group.input-group-lg
              =f.text_field :category_label, placeholder: t('views.subject_courses.form.category_label_placeholder'), class: 'form-control'
          .form-group

            =f.label :additional_text_label, t('views.subject_courses.form.additional_text_label')
            .input-group.input-group-lg
              =f.text_field :additional_text_label, placeholder: t('views.subject_courses.form.additional_text_label_placeholder'), class: 'form-control'




        .col-sm-6
          .form-group
            =f.label :quiz_pass_rate, t('views.subject_courses.form.quiz_pass_rate')
            .input-group.input-group-lg
              =f.text_field :quiz_pass_rate, placeholder: t('views.subject_courses.form.quiz_pass_rate_placeholder'), class: 'form-control'
          .form-group
            =f.label :exam_body_id, t('views.subject_courses.form.exam_body_id')
            .input-group.input-group-lg
              =f.collection_select :exam_body_id, @exam_bodies, :id, :name, {include_blank: t('views.general.select')}, {class: 'form-control custom-select'}
          .form-group
            =f.label :survey_url, t('views.subject_courses.form.survey_url')
            .input-group.input-group-lg
              =f.text_field :survey_url, placeholder: t('views.subject_courses.form.survey_url_placeholder'), class: 'form-control'


      .row
        .col-sm-6
          .col-sm-6
            .col-sm
              .checkbox
                %label
                  =f.check_box :active
                  =t('views.subject_courses.form.active')

            .col-sm
              .checkbox
                %label
                  =f.check_box :preview
                  =t('views.subject_courses.form.preview')

            .col-sm
              .checkbox
                %label
                  =f.check_box :computer_based
                  =t('views.subject_courses.form.computer_based')


        .col-sm-6
          .form-group
            .image-label
              Background Image

            -if @subject_course.background_image.present?
              =image_tag @subject_course.background_image.try(:url), class: 'md-image'
            .input-group.input-group-lg
              =f.file_field :background_image, class: 'form-control'

          .form-group
            =f.label :highlight_colour, t('views.subject_courses.form.highlight_colour')
            .input-group.input-group-lg
              =f.select(:highlight_colour, options_for_select([%w[Red #fd5c63], %w[Blue #30aabc], %w[Yellow #f0ca28], %w[Purple #775ead], %w[Green #00b67b]]), { include_blank: true }, class: 'form-control custom-select')


      .row
        .col-sm-12
          =f.label :description, t('views.subject_courses.form.description')
          .input-group.input-group-lg
            =f.text_area :description, as: :summernote, placeholder: t('views.subject_courses.form.description_placeholder'), rows: 5, class: 'form-control', style: 'border-radius: 6px;', id: 'editor'

      .row.pt-4
        .col-md-12
          =f.submit t('views.general.save'), class: 'btn btn-primary'
          =link_to t('views.general.cancel'), subject_courses_path, class: 'btn btn-secondary l-margin-right-big l-padding-side-3x'


:javascript

  $('#editor').summernote({
    disableDragAndDrop: true,
    height: 150
  });

