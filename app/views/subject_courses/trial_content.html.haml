.l-section-small.is-bg-asphalt
  .l-wrap
    .container-fluid
      .row.l-margin-bottom
        .col-md-12.text-center
          %h1.l-margin-bottom.l-margin-top.text-center.h-separator.h-separator-center{style: 'letter-spacing:1.5px;'}
            =@subject_course.name
          %p.h5
            ="Select the trial content available"

      .row.l-margin-top.l-margin-bottom

        =form_for(@subject_course, url: subject_course_update_trial_content_url) do |f|
          .col-md-12.l-margin-top-big
            =f.fields_for :course_modules do |cm|
              .table-box
                .table-responsive
                  %h4=cm.object.name
                  %table.table.sorted_table
                    %thead
                      %tr
                        %th Name
                        %th Trial
                        %th
                    %tbody
                      =cm.fields_for :course_module_elements do |cme|
                        %tr
                          %td
                            =cme.object.name
                          %td
                            =cme.check_box :available_on_trial

            %hr/
            .table-box
              .table-responsive
                %h3{style: 'color: #54a4ee;'}
                  ='Course Resources'
                %table.table.sorted_table
                  %thead
                    %tr
                      %th Name
                      %th Trial
                      %th
                  %tbody
                    =f.fields_for :subject_course_resources do |resource|
                      %tr
                        %td
                          =resource.object.name
                        %td
                          =resource.check_box :available_on_trial


            =f.submit t('views.general.save'), class: 'btn btn-red'

            .pull-right
              =link_to t('views.subject_courses.course_modules_order.return'), subject_course_url(@subject_course), class: 'btn btn-red'
